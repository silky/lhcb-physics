package GaussSys
version v40r4

branches cmt doc

#==================================================================
# Gauss packages
#==================================================================

# Gauss application: the application is not built on Win32
use Gauss               v40r4   Sim

# Generator packages: Basic configuration
use GenCuts             v1r1    Gen
use GENSER              v9r2    Gen
use EvtGen              v12r5   Gen
use Mint                v1r0    Gen    # Additions to EvtGen
use EvtGenExtras        v3r0    Gen
use Generators          v11r1   Gen
use LbPythia            v10r0   Gen


# Generators packages: extensions to Pythia6
#use LbAlpGen             v1r0    Gen   # OFF for the moment
use BcVegPy              v3r0    Gen
use LbBcVegPy            v4r0    Gen
use LbHidValley          v3r0    Gen
use LbOniaPairs          v1r0    Gen

# Generators packages: alternative to Pythia6 for pp collisions
use LbHerwig             v6r1    Gen
use LbPythia8            v2r2    Gen

# Generators packages: alternative to Pythia6 for p-A collisions
use   LbHijing          v6r1    Gen

# Generators packages: LHCb sampling results for Machine Induced Background
use   LbMIB             v5r0    Gen

# Generators packages: LHCb particle gun generator
use   LbPGuns           v2r0    Gen

# Simulation basic packages
use GiGa        	v19r8p1	  Sim     
use GiGaCnv     	v18r7	  Sim
use SimSvc              v5r2      Sim
use GiGaVisUI           v5r2      Sim
use VisSvc              v5r6      Vis 
use ClhepTools          v2r1p1    Tools

# Simulation specialized packages
use GaussKine           v4r0      Sim
use GaussAlgs		v4r1      Sim
use GaussTools          v16r0     Sim
use GaussRICH		v11r5     Sim
use GaussTracker	v6r2p1	  Sim
use GaussCalo		v9r3	  Sim
use G4LHCblists         v2r2      Geant4   # Temporarily
use GaussPhysics	v7r2	  Sim
use GaussUMC            v1r1      Sim
use GaussCherenkov      v1r1      Sim

# Monitoring packages
use GaussMonitor	v6r8      Sim
use CaloMoniSim         v4r0      Calo
use VeloGauss           v2r4      Velo
use MuonMoniSim         v2r5p1    Muon
use BcmMoniSim          v1r2      Bcm
use BlsMoniSim          v1r1      Bls

# GMDL
#use GDML                v1r240p0  Sim
#use GDMLG4Writer        v2r0      Sim

# Visualization configuration
use XmlVis              v1r13      Vis

# Test packages for new releases or installations on new platforms
use GenTests            v1r5      Gen
use SimChecks           v1r0      Sim

# Allow to run the QMTests  
apply_pattern QMTest

# Declare this as a container package
apply_pattern container_package

# Allow the generation of QMTest summary 
apply_pattern QMTestSummarize

