package GaussSys
version v43r3

branches cmt doc

#==================================================================
# Gauss packages
#==================================================================

# Gauss application: the application is not built on Win32
use Gauss               v43r3   Sim

# LCG interfaces to generators, until available in LCGCMT
use LCG_Settings        v64r2p1 
use thepeg              v64r2p1 LCG_GeneratorsInterfaces
use herwigpp            v64r2p1 LCG_GeneratorsInterfaces
use rivet               v64r2p1 LCG_GeneratorsInterfaces

# Generator packages: Basic configuration
use GenCuts             v3r1    Gen
use GENSER              v11r0   Gen
use EvtGen              v12r11  Gen
use Mint                v1r6    Gen
use EvtGenExtras        v3r4    Gen
use Generators          v12r2   Gen
use LbPythia            v12r1   Gen

# Generators packages: extensions to Pythia6
use LbAlpGen            v3r0    Gen 
use BcVegPy             v3r1    Gen
use GenXicc             v2r0    Gen
use LbBcVegPy           v4r3p1  Gen
use LbGenXicc           v2r0    Gen
use LbHidValley         v3r2    Gen
use LbOniaPairs         v1r2    Gen

# Generators packages: alternative to Pythia6 for pp collisions
use LbPythia8           v5r1    Gen
use LbHerwigpp          v2r0    Gen

# Generators packages: alternative to Pythia6 for p-A collisions
use LbHijing            v7r0    Gen

# Generators packages: LHCb sampling results for Machine Induced Background
use LbMIB               v7r0    Gen

# Generators packages: LHCb particle gun generator
use LbPGuns             v4r0    Gen

# Simulation basic packages
use GiGa        	v20r0	  Sim     
use GiGaCnv     	v20r0	  Sim
use SimSvc              v5r2      Sim
use GiGaVisUI           v5r2      Sim
use VisSvc              v5r7      Vis 
use ClhepTools          v2r1p1    Tools

# Simulation specialized packages
use GaussKine           v6r1      Sim
use GaussAlgs		v6r1      Sim
use GaussTools          v18r1     Sim
use GaussRICH		v13r0     Sim
use GaussTracker	v6r2p1	  Sim
use GaussCalo		v9r4	  Sim
use GaussPhysics	v10r0	  Sim
use GaussCherenkov      v3r0      Sim

# Monitoring packages
use GaussMonitor	v6r10     Sim
use CaloMoniSim         v4r0      Calo
use VeloGauss           v2r4      Velo
use MuonMoniSim         v2r6      Muon
use BcmMoniSim          v1r2      Bcm
use BlsMoniSim          v1r1      Bls
use VLMoniSim           v1r0      VL
use GaussUMC            v2r0      Sim

# Packages for MC generator tuning
use GenTune             v1r0p1    Gen  

# GMDL
use LbGDML              v1r0      Sim

# Visualization configuration
use XmlVis              v1r15     Vis

# Test packages for new releases or installations on new platforms
use GenTests            v1r6      Gen
use SimChecks           v1r0      Sim

# Allow to run the QMTests  
apply_pattern QMTest

# Declare this as a container package
apply_pattern container_package

# Allow the generation of QMTest summary 
apply_pattern QMTestSummarize

