package  GiGa 

version v4

set GIGAOPTIONS "${GIGAROOT}/options/GiGaOptions.txt"

branches cmt src doc GiGa 

# GaudiKernel
use GaudiKernel   v9*

# Geant4 tool kit 
use GEANT4        v3r0*	Sim


###########################################################################
# * GiGa * GiGa * GiGa * GiGa * GiGa * GiGa * GiGa * GiGa * GiGa * GiGa * #
###########################################################################

include_dirs                     $(GIGAROOT)

# component library
library        GiGaLib   Lib/*.cpp 	        
library        GiGa      component/*.cpp 	        

apply_pattern package_Llinkopts
apply_pattern ld_library_path 
#=====================================================================

private

apply_pattern package_Cshlibflags
macro_append GiGaLib_shlibflags "$(GaudiKernel_linkopts) $(GEANT4_linkopts)"

# to reduce number of warnings 
macro_remove cppflags "-Wall "

# to reduce number of warnings from G4 
macro_append GiGa_cppflags   " " \ 
          Linux           "-Wno-unused " 








