# $Header: /afs/cern.ch/project/cvs/reps/lhcb/Sim/GiGa/cmt/requirements,v 1.16 2001-04-26 21:01:16 ibelyaev Exp $ 

package  GiGa 
version  v4

################ own options #############################################
set GIGAOPTIONS "${GIGAROOT}/options/GiGaOptions.txt"

################ structure ############################################### 
branches cmt src doc GiGa 

################ GaudiKernel #############################################
use GaudiKernel   v9*

################ Geant4 wrapper package ################################## 
use G4Wrapper     v1 Sim 

################ own includes ############################################
include_dirs                     $(GIGAROOT)

################ linker library ##########################################
library        GiGaLib   Lib/*.cpp 	        

################ component library #######################################
library        GiGa      component/*.cpp  	        

apply_pattern package_Llinkopts
apply_pattern ld_library_path

################ private stuff ###########################################
private

apply_pattern package_Cshlibflags
macro_append  GiGaLib_shlibflags  "$(GaudiKernel_linkopts) $(G4Wrapper_linkopts) $(GEANT4_linkopts) $(CLHEP_linkopts)"

################ to reduce number of warnings ###########################
macro_remove cppflags "-Wall "

################ to reduce number of warnings from G4 
macro_append GiGa_cppflags   " " \ 
          Linux           "-Wno-unused " 

################ end #####################################################




