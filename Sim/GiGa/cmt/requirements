package  GiGa
version  v5

# ============== own options ==================================================
set GIGAOPTIONS "${GIGAROOT}/options/GiGaOptions.txt"

# ============== structure ====================================================
branches         cmt src doc GiGa

# ============== used packaged ================================================
use GaudiKernel  v10*
use GEANT4       v3r2*  Sim

# ============== own includes =================================================
include_dirs                     $(GIGAROOT)

# ============== linker library ===============================================
# for this concrete release it is static library!
# library        GiGaLib  -no_share   Lib/*.cpp
library          GiGaLib              Lib/*.cpp

# ============== component library ============================================
# for this concrete release it is static library!
# library        GiGa  -no_share    component/*.cpp
library          GiGa               component/*.cpp


# ============== patterns =====================================================
apply_pattern    package_Lstamps
apply_pattern    package_Llinkopts
apply_pattern    linker_path

#macro componentshr_linkopts " -fPIC -Wl,-s,-shared,-Bsymbolic -ldl "

# ============== private stuff ================================================
private
apply_pattern package_Cshlibflags
apply_pattern package_Lshlibflags
macro_append  GiGaLib_shlibflags " $(GaudiKernel_linkopts) "
macro_append  GiGaLib_shlibflags " $(GEANT4_linkopts) "
macro_append  GiGaLib_shlibflags " $(CLHEP_linkopts) "
