package  GiGa 
version  v4

################ own options #############################################
set GIGAOPTIONS "${GIGAROOT}/options/GiGaOptions.txt"

################ structure ############################################### 
branches cmt src doc GiGa 

################ GaudiKernel #############################################
use GaudiKernel   v9*

################ Geant4 tool kit ######################################### 
use GEANT4        v3r0*	Sim

################ own includes ############################################
include_dirs                     $(GIGAROOT)

################ linker library ##########################################
#library        GiGaLib   Lib/*.cpp 	        

################ component library #######################################
library        GiGa      component/*.cpp Lib/*.cpp  	        

apply_pattern package_Clinkopts
apply_pattern packageShr  

################ private stuff ###########################################
private

apply_pattern package_Cshlibflags
#macro_append GiGaLib_shlibflags  "$(GaudiKernel_linkopts) $(GEANT4_linkopts) $(CLHEP_linkopts)"

################ to reduce number of warnings 
macro_remove cppflags "-Wall "
################ to reduce number of warnings from G4 
macro_append GiGa_cppflags   " " \ 
          Linux           "-Wno-unused " 

