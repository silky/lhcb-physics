# $Id: requirements,v 1.28 2002-05-10 09:27:02 ranjard Exp $ 
# =============================================================================

package  GiGa
version  v8r0

branches         cmt src doc GiGa

use GaudiKernel  v12r* 
use GEANT4       v4r0p* Sim 


include_dirs     $(GIGAROOT)

# ============== linker library ===============================================
library          GiGaLib              Lib/*.cpp
apply_pattern    library_stamps library=GiGaLib
apply_pattern    library_path library=GiGaLib

# ============== component library ============================================
library          GiGa               component/*.cpp
apply_pattern    libraryShr library=GiGa

# ============= link options ==================================================
apply_pattern    library_Clinkopts library=GiGa
apply_pattern    library_Llinkopts library=GiGaLib

# ============== private stuff ================================================
apply_pattern library_Cshlibflags library=GiGa
apply_pattern library_Lshlibflags library=GiGaLib

