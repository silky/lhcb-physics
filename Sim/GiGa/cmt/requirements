# ============== linker library ===============================================
library          GiGaLib           Lib/*.cpp

# ============== component library ============================================
library          GiGa              component/*.cpp

# ============== standard patterns ============================================
apply_pattern    component_library library=GiGa 
apply_pattern    linker_library    library=GiGaLib 

