package GaussTools
version v3r2

# ============== package structure ============================================
branches         cmt src doc

# ============== explicit dependencies ========================================  
use AIDA         v*
use GiGaCnv      v9r*      Sim

# ============== Event ========================================================
use VeloEvent    v12r*     Event
use MuonEvent    v2r*      Event
use RichEvent    v4r*      Event

# ============== linker library ===============================================
library          GaussToolsLib           Lib/*.cpp

# ============== component library ============================================
library          GaussTools   *.cpp                  \
                              Components/*.cpp       \
                              Actions/*.cpp          \
                              Tracking/*.cpp         \
                              RICH/SensDet/*.cpp     \ 
                              RICH/PhysProcess/*.cpp \
                              RICH/PhysProcess/*.cc  \
                              RICH/Misc/*.cpp        \ 
                              PhysConstructors/*.cpp \
                              PhysConstructors/*.cc

# ============== standard includes ============================================
include_dirs     $(GAUSSTOOLSROOT)
        
# ============== standard patterns ===========================================
apply_pattern    component_library library=GaussTools
apply_pattern    linker_library    library=GaussToolsLib
# ============================================================================
# The END 
# ============================================================================
