# =============================================================================
package GaussTools
version v6r1

# =============== package structure ===========================================
branches          cmt src doc GaussTools

# =============== explicit dependencies =======================================  
use GiGaCnv       v11r*     Sim

# =============== Event =======================================================
use VeloEvent     v*     Event
use MuonEvent     v*     Event
use RichEvent     v*     Event
use CaloEvent     v*     Event 

# ============== linker library ===============================================
library          GaussToolsLib           Lib/*.cpp

# ============== component library ============================================
library          GaussTools              Components/*.cpp       

# ============== standard includes ============================================
include_dirs     $(GAUSSTOOLSROOT)
        
# ============== standard patterns ===========================================
apply_pattern    component_library library=GaussTools
apply_pattern    linker_library    library=GaussToolsLib
# ============================================================================
# The END 
# ============================================================================
