//--------------------------------------------------------------------------
// Execute a standard production Gauss job
//--------------------------------------------------------------------------
#include "$GAUSSOPTS/Gauss.opts"

//--------------------------------------------------------------------------
// Geometry database dependent options
//--------------------------------------------------------------------------
DetectorDataSvc.DetDbLocation = "$XMLDDDBROOT/DDDB/lhcb-200507.xml";
MagneticFieldSvc.FieldMapFile = "$FIELDMAPROOT/cdf/field045.cdf"; 

// No Rich conditions available for this geometry
GiGa.RunSeq.RichG4RunCond.ActivateRichSimCondition = false;
// Delta rays as cuts per region not available for this geometry, use
// older simulation setup
GiGa.GiGaMgr.RunTools -= { "GiGaRegionsTool" };
SimulationSvc.SimulationDbLocation = "$GAUSSROOT/xml/Simulation-v200412.xml";

