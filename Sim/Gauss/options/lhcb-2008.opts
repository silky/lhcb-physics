/** @file 
 * 
 *  Job options for Gauss to produce events with evolving survey geometry
 *  as available in corresponding "head" tag of DDDB
 *
 *  @author G.Corti
 *  @date   2008-06-10
 */

//--------------------------------------------------------------------------
// Execute a standard production Gauss job
//--------------------------------------------------------------------------
#include "$GAUSSOPTS/Gauss.opts"

//--------------------------------------------------------------------------
// Geometry database dependent options: latest picked
//                                      head-20080516 still works
//--------------------------------------------------------------------------
CondDBDispatcherSvc.Alternatives = { "/Conditions": "CondDBAccessSvc/SIMCOND" };
DDDB.DefaultTAG     = "head-20080729";
SIMCOND.DefaultTAG  = "head-20080729";

// Magnetic field: measured map
#include "$GAUSSOPTS/MeasuredFieldMap.opts"

// Integrate geometry info from CondDB
GiGaGeo.UseAlignment      = true;
GiGaGeo.AlignAllDetectors = true;

