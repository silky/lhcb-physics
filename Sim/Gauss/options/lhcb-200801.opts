/** @file 
 * 
 *  Job options for Gauss to produce events with evolving survey geometry
 *  as available in corresponding "head" tag of DDDB
 *
 */

//--------------------------------------------------------------------------
// Execute a standard production Gauss job
//--------------------------------------------------------------------------
#include "$GAUSSOPTS/Gauss.opts"

//--------------------------------------------------------------------------
// Geometry database dependent options
//--------------------------------------------------------------------------
DDDB.DefaultTAG     = "head-20080130";
LHCBCOND.DefaultTAG = "head-20080130";

// Magnetic field
MagneticFieldSvc.FieldMapFile = "$FIELDMAPROOT/cdf/field047.cdf";

// No BCM in this tag, so remove them from the list of detectors to simulate
Geo.StreamItems    -= {"/dd/Structure/LHCb/MagnetRegion/BcmDown"};

