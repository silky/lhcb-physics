package Gauss
version v14r0

# =============================================================================
# structure 
# =============================================================================
branches doc options cmt job data

#== Set the Gauss version environment variable, read by GaussInit ==
pattern GaussVersion path_append GAUSSVERS <version>
apply_pattern GaussVersion

# Main program and standard job options
use GaudiConf           v7r*     

# GAUDI framework
use GaudiAlg            v6r*
use GaudiAud            v6r*
use GaudiSvc            v11r*

# ROOT event persistency
use GaudiRootDb         v9r*
use GaudiPoolDb         v1r*

# Histogram persistency 
use HbookCnv            v14r*

# Access to magnetic field service
use Magnet              v2r*    Det

#============================================================================

#GiGa staff...
use GiGaCnv             v14r1   Sim
use GaussTools          v9r0    Sim
use GaussTracker        v3r1    Sim
use GaussRICH           v4r5    Sim
use GaussCalo           v6r0    Sim
use GaussPhysics        v2r6    Sim

#optional visualisation and UI
#use GiGaVisUI           v3r0    Sim

# generator
use GeneratorModules    v10r4    Gen

#get information from DBASE and PARAM 
use XmlDDDB             v20r0   Det   -no_auto_imports
use FieldMap            v4r3          -no_auto_imports
use DecFiles            v4r0    Gen   -no_auto_imports
use ParamFiles          v3r0          -no_auto_imports

# =============================================================================
# Essential environment variables 
# =============================================================================
set  GAUSSOPTS "${GAUSSROOT}/options"

# =============== visualization  ==============================================
set  G4DAWNFILE_DEST_DIR       "../job/"
set  G4DAWNFILE_PS_VIEWER      "gv"
set  G4DAWN_MULTI_WINDOW       "1"
set  G4DAWNFILE_MULTI_WINDOW   "1"
set  G4DAWNFILE_VIEWER         dawn
set  G4VRMLFILE_VIEWER         vrweb \
                WIN32          netscape
set  G4VRML_PV_PICKABLE        "1"


# == Main Program =============================================================
application Gauss $(GAUDICONFROOT)/src/GaudiMain.cpp 

# ========================= set macros ========================================
apply_pattern application_path 
macro Gauss_linkopts  "$(application_linkopts) -Wl,-Map,Linux.map"

# =============== just make executable "visible" ==============================
path_remove    PATH  "/Gauss/"
path_append    PATH  "${GAUSSROOT}/${BINDIR}"

# =============== alias =======================================================
alias gauss " ${GAUSSROOT}/${BINDIR}/Gauss.exe ${GAUSSOPTS}/Gauss.opts "
alias gaussvis " ${GAUSSROOT}/${BINDIR}/Gauss.exe ${GAUSSOPTS}/GaussVis.opts "
