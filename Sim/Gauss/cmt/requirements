package Gauss
version v6r0

# =============================================================================
# structure 
# =============================================================================
branches doc options cmt job data

# version_strategy first_choice

# =============================================================================
# dependencies 
use ExternalLibs        v4r*
use GEANT4              v2r4101p*	Sim
use HepMC               v3r121p*	Sim
# =============================================================================

# Main program and standard job options
use GaudiConf           v6*     

# GAUDI framework
use GaudiAlg            v6r*
use GaudiAud            v6r*
use GaudiSvc            v10r*

# ROOT event persistency
use GaudiRootDb         v9r*
use DbCnv               v7r*    Event 

# Histogram persistency (optional)
use HbookCnv            v13r*

# Access to magnetic field service
use Magnet              v2r*    Det

#GiGa staff...
use GiGaCnv             v9r*    Sim
use GaussTools          v3r*    Sim
#use GaussImports        v2r*    Sim 

# generator
use GeneratorModules    v4r*    Gen

# optional generator: 
#use EvGen               v4r*    Sim 

#geometry source 
use XmlDDDB             v13r*   Det 

# Outer Tracker
#use OTDet               v2r2p1  Det  
#use OTAlgorithms        v11r9   OT
#use OTAssociators       v2r1    OT

#use GaussChecks          v1r0 Sim

# =============================================================================
# Essential environment variables 
# =============================================================================
set  GAUSSOPTS "${GAUSSROOT}/options"
set  GAUSSDATA "${GAUSSROOT}/data"

# =============== visualization  ==============================================
set  G4DAWNFILE_DEST_DIR       "../job/"
set  G4DAWNFILE_PS_VIEWER      "gv"
set  G4DAWN_MULTI_WINDOW       "1"
set  G4DAWNFILE_MULTI_WINDOW   "1"
set  G4DAWNFILE_VIEWER         dawn
set  G4VRMLFILE_VIEWER         vrweb \
                WIN32          netscape
set  G4VRML_PV_PICKABLE        "1"


# == Main Program =============================================================
application Gauss $(GAUDICONFROOT)/src/GaudiMain.cpp

# ========================= set macros ========================================
apply_pattern application_path 
macro Gauss_linkopts  "$(application_linkopts)"

# =============== just make executable "visible" ==============================
path_remove    PATH  "/Gauss/"
path_append    PATH  "${GAUSSROOT}/${BINDIR}"

# =============== alias =======================================================
alias gauss " ${GAUSSROOT}/${BINDIR}/Gauss.exe ${GAUSSOPTS}/Gauss.opts "
alias gaussvis " ${GAUSSROOT}/${BINDIR}/Gauss.exe ${GAUSSOPTS}/Gaussvis.opts "
