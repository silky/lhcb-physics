# $Log: not supported by cvs2svn $ 
# =============================================================================

package Gauss
version v1r0

# =============================================================================
# structure 
# =============================================================================
branches doc options cmt job

# =============================================================================
# dependencies 
# =============================================================================
# generator
use GeneratorModules v1r0 Gen

# Main program and standard job options
use GaudiConf     v6*     

# GAUDI framework
use GaudiSys      v9*

# ROOT event persistency
use GaudiRootDb   v5*

# Histogram persistency
use HbookCnv      v11r*

# SICB stuff
use dbase         v240 SICB
use SicbCnv       v15r* SICB

#GiGa staff...
use GiGaCnv       v4r*  Sim
use EvGen         v2r*   Sim

#geometry source 
use XmlDDDB       v8r*   Det 

# =============================================================================
# Essential environment variables 
# =============================================================================
set  GAUSSOPTS "${GAUSSROOT}/options"

# =============== visualization  ==============================================
set  G4DAWNFILE_DEST_DIR       "../job/"
set  G4DAWNFILE_PS_VIEWER      "gv"
set  G4DAWN_MULTI_WINDOW       "1"
set  G4DAWNFILE_MULTI_WINDOW   "1"
set  G4DAWNFILE_VIEWER         dawn
set  G4VRMLFILE_VIEWER         vrweb \
                WIN32          netscape
set  G4VRML_PV_PICKABLE        "1"


# == Main Program =============================================================
application Gauss $(GAUDICONFROOT)/src/GaudiMain.cpp

# ========================= set macros ========================================
apply_pattern application_path 
macro Gauss_linkopts  "$(application_linkopts)"

# =============== just make executable "visible" ==============================
path_remove    PATH  "/Gauss/"
path_append    PATH  "${GAUSSROOT}/${BINDIR}"

# =============== alias =======================================================
alias gauss " ${GAUSSROOT}/${BINDIR}/Gauss.exe ${GAUSSOPTS}/Gauss.opts "
