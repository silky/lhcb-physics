package Gauss
version v7r0

# =============================================================================
# structure 
# =============================================================================
branches doc options cmt job data

# Main program and standard job options
use GaudiConf           v6r5     

# GAUDI framework
use GaudiAlg            v6r*
use GaudiAud            v6r*
use GaudiSvc            v10r*

# ROOT event persistency
use GaudiRootDb         v9r*
use DbCnv               v7r*    Event 

# Histogram persistency 
use HbookCnv            v13r*

# Access to magnetic field service
use Magnet              v2r*    Det

#GiGa staff...
use GiGaCnv             v10r0   Sim
use GaussTools          v5r0    Sim
use GaussTracker        v1r0    Sim
use GaussRICH           v1r0    Sim
use GaussCalo           v1r0    Sim
use CaloDetXmlCnv       v2r2    Det 

#optional visualisation and UI
use GiGaVisUI           v1r0    Sim

#optional GaussImports
#use GaussImports       v4r0    Sim

# generator
use GeneratorModules    v4r1    Gen

# optional generator: 
#use EvGen              v4r0    Sim 

#geometry source 
use XmlDDDB             v14r4   Det 

#Trackers
use OTAlgorithms        v12r2   OT
use OTAssociators       v2r3    OT
use VeloAlgorithms      v2r5    Velo
use VeloAssociators     v1r4    Velo
use ITAlgorithms        v12r6   IT

#use GaussChecks          v1r0 Sim

# =============================================================================
# Essential environment variables 
# =============================================================================
set  GAUSSOPTS "${GAUSSROOT}/options"
set  GAUSSDATA "${GAUSSROOT}/data"

set  G4LEVELGAMMADATA "/afs/cern.ch/sw/geant4/releases/share/geant4.4.1.p01/data"

# =============== visualization  ==============================================
set  G4DAWNFILE_DEST_DIR       "../job/"
set  G4DAWNFILE_PS_VIEWER      "gv"
set  G4DAWN_MULTI_WINDOW       "1"
set  G4DAWNFILE_MULTI_WINDOW   "1"
set  G4DAWNFILE_VIEWER         dawn
set  G4VRMLFILE_VIEWER         vrweb \
                WIN32          netscape
set  G4VRML_PV_PICKABLE        "1"


# == Main Program =============================================================
application Gauss $(GAUDICONFROOT)/src/GaudiMain.cpp

# ========================= set macros ========================================
apply_pattern application_path 
macro Gauss_linkopts  "$(application_linkopts)"

# =============== just make executable "visible" ==============================
path_remove    PATH  "/Gauss/"
path_append    PATH  "${GAUSSROOT}/${BINDIR}"

# =============== alias =======================================================
alias gauss " ${GAUSSROOT}/${BINDIR}/Gauss.exe ${GAUSSOPTS}/Gauss.opts "
alias gaussvis " ${GAUSSROOT}/${BINDIR}/Gauss.exe ${GAUSSOPTS}/Gaussvis.opts "
