# $Header: /afs/cern.ch/project/cvs/reps/lhcb/Sim/GiGaCnv/cmt/requirements,v 1.4 2001-04-26 21:01:40 ibelyaev Exp $ 

package  GiGaCnv 
version v1

################ structure ################################################
branches cmt src doc GiGaCnv 

################ own includes #############################################
include_dirs                     $(GIGACNVROOT)

################ own options ##############################################
set GIGACNVOPTIONS  "${GIGACNVROOT}/options/GiGaCnvOptions.txt"

################ GiGa #####################################################
use GiGa          v5*   Sim 

################ Event ####################################################
use LHCbEvent     v9*	Event

################ Detector #################################################
use DetDesc       v6*	Det

################ linker library ###########################################
library GiGaCnvLib  Lib/*.cpp
  
################ component library ########################################
library GiGaCnv     component/*.cpp Lib/*.cpp 	        

apply_pattern package_Llinkopts
apply_pattern ld_library_path 

################ private stuff ###########################################
private
	
apply_pattern package_Cshlibflags
macro_append  GiGaCnvLib_shlibflags  "$(GaudiKernel_linkopts) $(GiGa_linkopts) $(G4Wrapper_linkopts) $(GEANT4_linkopts) $(CLHEP_linkopts)"

################ to reduce number of warnings ############################
 
macro_remove cppflags "-Wall "

################ to reduce number of warnings from G4 ####################
macro_append GiGaCnv_cppflags   " " \ 
          Linux           "-Wno-unused " 

################ end #####################################################
