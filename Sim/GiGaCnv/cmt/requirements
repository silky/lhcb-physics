package  GiGaCnv 
version v1

################ structure ################################################
branches cmt src doc GiGaCnv 

################ own includes #############################################
include_dirs                     $(GIGACNVROOT)

################ own options ##############################################
set GIGACNVOPTIONS  "${GIGACNVROOT}/options/GiGaCnvOptions.txt"

################ GiGa #####################################################
use GiGa          v5*   Sim 

################ Event ####################################################
use LHCbEvent     v9*	Event

################ Detector #################################################
use DetDesc       v6*	Det

################ linker library ###########################################
#library GiGaCnvLib  Lib/*.cpp
  
################ component library ########################################
library GiGaCnv     component/*.cpp Lib/*.cpp 	        

apply_pattern package_Clinkopts
apply_pattern packageShr  

################ private stuff ############################################	
private	

macro  GiGaCnv_shlibflags "$(componentshr_linkopts) $(GiGaLinkOpts) $(use_linkopts) "



