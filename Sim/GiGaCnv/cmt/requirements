# =============================================================================

package  GiGaCnv 
version  v4r0

branches cmt src doc GiGaCnv 

include_dirs     $(GIGACNVROOT)

use HepMC         v1r2  Sim
use GeneratorObjects v1r0 Gen

use GiGa          v7r*  Sim 
use LHCbEvent     v12r*	Event
use DetDesc       v9r*	Det

# ============== linker library (base classes) ================================
library          GiGaCnvLib            Lib/*.cpp
apply_pattern    package_Lstamps
apply_pattern    linker_path

# ============== component library ============================================
library          GiGaCnv               component/*.cpp 	        
apply_pattern    package Shr

# ============== link options =================================================
apply_pattern    package_Clinkopts 
apply_pattern    package_Llinkopts

# ============== private stuff ================================================
private
apply_pattern    package_Cshlibflags
apply_pattern    package_Lshlibflags
macro_append     GiGaCnvLib_shlibflags " $(GaudiKernel_linkopts) "
macro_append     GiGaCnvLib_shlibflags " $(GiGa_linkopts) "
macro_append     GiGaCnvLib_shlibflags " $(DetDesc_linkopts) "
macro_append     GiGaCnvLib_shlibflags " $(LHCbEvent_linkopts) "
macro_append     GiGaCnvLib_shlibflags " $(GEANT4_linkopts) "
macro_append     GiGaCnvLib_shlibflags " $(CLHEP_linkopts) "
