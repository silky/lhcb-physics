# $Id: requirements,v 1.21 2002-06-18 15:40:08 ranjard Exp $ 
# =============================================================================

package  GiGaCnv 
version  v5r1

branches cmt src doc GiGaCnv 

include_dirs     $(GIGACNVROOT)
        
use HepMC         v1r2*  Sim
use GenEvent      v1r*   Event

use GiGa          v8r*  Sim 
use Event         v1r*	Event
use DetDesc       v10r*	Det

# ============== linker library (base classes) ================================
library          GiGaCnvLib            Lib/*.cpp
apply_pattern    library_stamps library=GiGaCnvLib
apply_pattern    library_path library=GiGaCnvLib

# ============== component library ============================================
library          GiGaCnv               component/*.cpp 	        
apply_pattern    libraryShr library=GiGaCnv

# ============== link options =================================================
apply_pattern    library_Clinkopts library=GiGaCnv 
apply_pattern    library_Llinkopts library=GiGaCnvLib

# ============== private stuff ================================================
apply_pattern    library_Cshlibflags library=GiGaCnv
apply_pattern    library_Lshlibflags library=GiGaCnvLib

