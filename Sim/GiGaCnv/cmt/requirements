# $Header: /afs/cern.ch/project/cvs/reps/lhcb/Sim/GiGaCnv/cmt/requirements,v 1.2 2001-04-23 17:21:38 ibelyaev Exp $ 

package  GiGaCnv 
version v1

################ structure ################################################
branches cmt src doc GiGaCnv 

################ own includes #############################################
include_dirs                     $(GIGACNVROOT)

################ own options ##############################################
set GIGACNVOPTIONS  "${GIGACNVROOT}/options/GiGaCnvOptions.txt"

################ GiGa #####################################################
use GiGa          v5*   Sim 

################ Event ####################################################
use LHCbEvent     v9*	Event

################ Detector #################################################
use DetDesc       v6*	Det

################ linker library ###########################################
library GiGaCnvLib  Lib/*.cpp
  
################ component library ########################################
library GiGaCnv     component/*.cpp 	        

apply_pattern package_Llinkopts
apply_pattern ld_library_path 

################ private stuff ############################################	
private	

apply_pattern package_Cshlibflags
macro_append GiGaCnvLib_shlibflags "$(GaudiKernel_linkopts) $(GiGa_linkopts) $(GEANT4_linkopts) $(CLHEP_linkopts)"




