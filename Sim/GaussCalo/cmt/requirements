package GaussCalo
version v6r0

# =============== package structure ===========================================
branches          cmt src doc

# =============== explicit dependencies =======================================  
use AIDA          v*   
use GaussTools    v*     Sim

# =============== options =====================================================
set GAUSSCALOOPTS ${GAUSSCALOROOT}/options 
 
# =============== Event =======================================================
use CaloEvent     v*     Event 

# =============== Det =========================================================
use CaloDet       v*      Det 
use CaloDetXmlCnv v*      Det 

# ============== component library ============================================
library          GaussCalo   *.cpp                  

# ============== standard includes ============================================
include_dirs     $(GAUSSCALOROOT)
        
# ============== standard patterns ===========================================
apply_pattern    component_library library=GaussCalo
        
