package GaussTracker
version v5r1

# =============== package structure ===========================================
branches          cmt src doc

# =============== explicit dependencies =======================================
use GaussTools    v*     Sim

# ============== component library ============================================
library          GaussTracker   *.cpp                  

# ============== standard includes ============================================
include_dirs     $(GAUSSTRACKERROOT)
        
# ============== standard patterns ===========================================
apply_pattern    component_library library=GaussTracker
