# =============================================================================
package GaussTracker
version v2r1

# =============== package structure ===========================================
branches          cmt src doc

# =============== explicit dependencies =======================================  
use GaussTools    v6r*     Sim

# =============== Event =======================================================
use VeloEvent     v12r*     Event
use MuonEvent     v2r*      Event

# =============== Digitizatin and Monitoring =================================
use OTAlgorithms        v12r2   OT
use OTAssociators       v2r3    OT
use VeloAlgorithms      v2r5    Velo
use VeloAssociators     v1r4    Velo
use ITAlgorithms        v12r6   IT
use ITCheckers          v1r2    IT

# ============== component library ============================================
library          GaussTracker   *.cpp                  

# ============== standard includes ============================================
include_dirs     $(GAUSSTRACKERROOT)
        
# ============== standard patterns ===========================================
apply_pattern    component_library library=GaussTracker
