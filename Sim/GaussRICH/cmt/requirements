# =============================================================================
package GaussRICH
version v4r6

# =============== package structure ===========================================
branches          cmt src doc

# =============== explicit dependencies =======================================  
use GaussTools    v*     Sim
use AIDA          v*
# =============== Event =======================================================
use RichEvent     v*      Event

# ============== component library ============================================
library          GaussRICH    *.cpp             \
                              SensDet/*.cpp     \ 
                              PhysProcess/*.cpp \
                              srcG4/*.cc       \
                              RichAction/*.cpp \
                              Misc/*.cpp   \
                              RichAnalysis/*.cpp \
                              RichAnalysis/*.icpp    

# ============== standard includes ============================================
include_dirs     $(GAUSSRICHROOT) \
                 $(GAUSSRICHROOT)/src/SensDet \
                 $(GAUSSRICHROOT)/src/PhysProcess \
                 $(GAUSSRICHROOT)/src/RichAction \
                 $(GAUSSRICHROOT)/src/Misc \
                 $(GAUSSRICHROOT)/src/RichAnalysis \
                 $(GAUSSRICHROOT)/src/srcG4

        
# ============== standard patterns ===========================================
apply_pattern    component_library library=GaussRICH
