#============================================================================
package Moore
version v1r0

# Structure, i.e. directories to process. 
#============================================================================
branches doc cmt options

# Used packages. 
#============================================================================

#-- Gaudi libraries (from GAUDI_v16r4)
use GaudiKernel         v19r2
use GaudiSvc            v13r4
use GaudiAlg            v8r8
use GaudiPoolDb         v1r13
use RootHistCnv         v9r4

#-- Databases
use XmlDDDB     v25r1   Det
use ParamFiles  v3r11   -no_auto_imports
use FieldMap    v4r5

#-- LHCb libraries (from LHCB_v18r6)
use LHCb        v18r6

#-- Lbcom packages (from LBCOM_v2r2)
use LbcomSys    v2r2

#-- Rec packages (from REC_v1r2)
use RecSys      v1r2

#-- Phys packages (from PHYS_v1r2)
use PhysCoreSys v1r2   Phys
use HltSys      v1r2   Hlt

#-- Online packages (from Online v1r2) - not on Windows
macro useOnline "OnlineSys v1r2" WIN32 ""
use $(useOnline)
#
#===== build Moore. On Win32 online app is same as offline... =====
macro buildOnline "$(GAUCHOJOBROOT)/src/GaudiOnlineMain.cpp \
                   $(GAUCHOJOBROOT)/src/GaudiDimController.cpp" \
            WIN32 "$(GAUDICONFROOT)/src/GaudiMain.cpp"
application Moore $(buildOnline)

application MooreOffline $(GAUDICONFROOT)/src/GaudiMain.cpp
apply_pattern application_path
# ========================= set macros ============================

# Set the default path for Moore options.
set MOOREOPTS ${MOOREROOT}/options

# define aliases
alias Moore "${MOOREROOT}/${BINDIR}/MooreOffline.exe"
