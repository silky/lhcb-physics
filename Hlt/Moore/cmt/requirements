#============================================================================
package Moore
version v2r1

branches doc cmt options

#============================================================================

#-- CMT and GaudiPolicy
use GaudiPolicy v6r3

#-- External libraries now taken from LCG, version defined by GaudiEnv
use RELAX v* LCG_Interfaces          -no_auto_imports

#-- Gaudi libraries (from GAUDI_v19r1)
use GaudiKernel		v22r0
use GaudiSvc 		v15r1        -no_auto_imports
use GaudiAlg 		v9r11        -no_auto_imports
use GaudiAud 	        v8r0         -no_auto_imports
use GaudiGSL		v6r5         -no_auto_imports
use GaudiPoolDb	        v2r10        -no_auto_imports
use RootHistCnv         v9r11        -no_auto_imports

#-- Database
use XmlDDDB             v40r0   Det  -no_auto_imports
use XmlConditions       v2r5    Det  -no_auto_imports
use FieldMap		v4r7         -no_auto_imports
use ParamFiles          v5r0         -no_auto_imports

#-- LHCb libraries (from LHCB_v22r1)
use GaudiConf           v10r1          -no_auto_imports
use GaudiObjDesc        v9r8p1         -no_auto_imports
use KernelSys           v6r1    Kernel -no_auto_imports
use DetSys              v9r1    Det    -no_auto_imports
use EventSys            v23r1   Event  -no_auto_imports
use DAQSys              v3r0    DAQ    -no_auto_imports
use LHCbAlgs            v2r5    Kernel -no_auto_imports
use SimComponents       v2r0    Sim    -no_auto_imports
use PatTools            v3r0    Pat    -no_auto_imports

#-- Lbcom packages (from LBCOM_v6r1)
use LbcomSys            v6r1         -no_auto_imports

#-- Rec packages (from REC_v4r1)
use RecSys              v4r1         -no_auto_imports

use HltSys		v1r2	     -no_auto_imports

#============================================================================
application Moore $(GAUDICONFROOT)/src/GaudiMain.cpp

#============================================================================
macro Moore_linkopts    "$(application_linkopts)"

apply_pattern application_path

# Set the default path for Moore options.
set MOOREOPTS ${MOOREROOT}/options

# define aliases
alias Moore "${MOOREROOT}/${BINDIR}/Moore.exe"


