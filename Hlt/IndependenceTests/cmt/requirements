package           IndependenceTests
version           v1r0

#============================================================================
# Structure, i.e. directories to process. 
#============================================================================
branches          cmt doc python src
#============================================================================
# Used packages. Specify the version, * at the end specifies 'any revision'
#    Put as many lines as needed, with all packages, without the '#'
#============================================================================
# use   Package			v1r*    Hat
use     HltDAQ                  v*      Hlt
use     GaudiKernel             v*
use     GaudiAlg                v*
use     HltEvent                v*      Event

apply_pattern install_more_includes more=WriteMismatches/Mismatches

#============================================================================
# Component library building rule
#============================================================================
library          WriteMismatches    ../WriteMismatches/src/lib/TupleHltDecReports.cpp
library          DecisionMap        ../WriteMismatches/src/dm/DecisionMap.cpp
#============================================================================
# define component library link options
#============================================================================
apply_pattern    component_library library=WriteMismatches
apply_pattern    linker_library    library=DecisionMap

## applications
application           find_mismatches        "../WriteMismatches/src/app/find_mismatches.cpp"
macro_append find_mismatches_use_linkopts "${Boost_linkopts_program_options}"
macro_append find_mismatches_dependencies DecisionMap

# =============== LCG Dictionaries ==========================================
apply_pattern     reflex_dictionary                             \
                  dictionary=Mismatches                          \
#                  headerfiles=$(INDEPENCETESTSROOT)/WriteMismatches/dict/Mismatches.h     \
 #                 selectionfile=$(INDEPENCETESTSROOT)/WriteMismatches/dict/Mismatches.xml \
		  headerfiles=../WriteMismatches/dict/Mismatches.h     \
                  selectionfile=../WriteMismatches/dict/Mismatches.xml \
                  options="-U__MINGW32__"

#============================================================================
# Python modules
#============================================================================
apply_pattern install_python_modules
