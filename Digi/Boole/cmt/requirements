package Boole
version v6r2

branches doc cmt job options

# Set the default path for Boole options.
set BOOLEOPTS  $(BOOLEROOT)/options

#== Set the Boole version environment variable, read by BooleInit ==
pattern BooleVersion path_append APPVERSION <version>
apply_pattern BooleVersion

#-- CMT and GaudiPolicy
use GaudiPolicy v5r18

#-- External libraries now taken from LCG, version defined by GaudiEnv

#-- Gaudi libraries (from GAUDI_v15r1)
use GaudiKernel		v16r1
use GaudiSvc 		v12r2p1
use GaudiAlg 		v8r0
use GaudiPoolDb		v1r8p1
use GaudiObjDesc 	v6r3
use HbookCnv 		v14r2

#-- Databases
use XmlDDDB	v22r3	Det
use ParamFiles	v3r8	-no_auto_imports
use FieldMap	v4r5

#-- LHCb libraries (from LHCB_v16r2)
use LHCb	v16r2

#-- BooleSys v6r2 packages

use DigiAlg		v3r0	Digi
use AsctToLinker        v1r2    Rec

# L0 trigger
use L0Calo              v7r6	L0
use PuVeto              v5r7	L0
use L0DU                v6r7p1	L0
use L0mConf		v2r2p3	L0
use L0MuonKernel	v2r1p1	L0
use L0MuonTrigger	v2r1	L0

# Calorimeter
use CaloMonitor         v2r2p1	Calo
use CaloDigit           v1r7	Calo

# Velo
use VeloAlgorithms      v2r9p3	Velo

# Inner Tracker
use ITAlgorithms        v14r3	IT
use ITCheckers          v2r3	IT

# Outer Tracker
use OTAlgorithms        v13r4p1	OT
use OTDAQ               v2r0    OT

# Muon
use MuonAlgs            v5r6	Muon
use MuonBackground	v1r8	Muon

# Rich
use RichDigiQC	        v1r7  	Rich
use RichReadout		v1r9	Rich

#
#===== build Boole =========================
application Boole $(GAUDICONFROOT)/src/GaudiMain.cpp
# ========================= set macros ============================

macro Boole_linkopts    "${application_linkopts}"

apply_pattern application_path
