package Boole
version v14r3

branches doc cmt job options

# Set the default path for Boole options.
set BOOLEOPTS  $(BOOLEROOT)/options

# Packages needed to compile and link the application
use GaudiConf          v*           -no_auto_imports
use GaudiKernel        v*

# Packages needed to resolve external dependencies at run time
use Python             v*    LCG_Interfaces -no_auto_imports

# Databases
use DDDB               v1r*  Det    -no_auto_imports
use ParamFiles         v6r1         -no_auto_imports
use FieldMap           v4r7         -no_auto_imports

# The rest are needed only to set up environment variables for job options

# From GAUDI project
use GaudiSvc           v*           -no_auto_imports
use GaudiPoolDb        v*           -no_auto_imports
use GaudiPython        v*           -no_auto_imports

# From LBCOM project
use STAlgorithms       v*    ST     -no_auto_imports
use STCheckers         v*    ST     -no_auto_imports
use STDAQ              v*    ST     -no_auto_imports
use L0Muon             v*    L0     -no_auto_imports
use OTMonitor          v*    OT     -no_auto_imports
use RichDAQ            v*    Rich   -no_auto_imports
use RichMCAssociators  v*    Rich   -no_auto_imports
use VeloAlgorithms     v*    Velo   -no_auto_imports
use VeloSimulation     v*    Velo   -no_auto_imports
use L0DU               v*    L0     -no_auto_imports

# From BOOLE project
use RichDigiQC         v*    Rich   -no_auto_imports
use RichReadout        v*    Rich   -no_auto_imports
use CaloMoniDigi       v*    Calo   -no_auto_imports
use DigiAlg            v*    Digi   -no_auto_imports
use MuonBackground     v*    Muon   -no_auto_imports

#===== build Boole =========================
application Boole $(GAUDICONFROOT)/src/GaudiMain.cpp
# ========================= set macros ============================

macro Boole_linkopts    "${application_linkopts}"

apply_pattern application_path
