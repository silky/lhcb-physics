package Boole
version v5r3

branches doc cmt job options

# Set the default path for Boole options.
set BOOLEOPTS  $(BOOLEROOT)/options

#== Set the Boole version environment variable, read by BooleInit ==
pattern BooleVersion path_append BOOLEVERS <version>
apply_pattern BooleVersion

#-- CMT and GaudiPolicy
use GaudiPolicy v5r14

#-- External libraries (as defined in GAUDI_v14r1)
use ExternalLibs	v4r4
use AIDA		v3r300		-no_auto_imports
use BOOST		v2r1302p0	-no_auto_imports
use CLHEP		v2r1810p0
use XERCES		v2r230p0
use CERNLIB 		v2r2002p0
use ROOT 		v2r31002p0
use GSL			v2r14p0
use PI			v1r112
use PCRE                v1r44
use UUID		v1r32
use SEAL		v1r133p1
use POOL		v1r150p1

#-- Gaudi libraries (from GAUDI_v14r1)
use GaudiKernel		v15r1
use GaudiSvc 		v11r2
use GaudiAlg 		v6r5
use GaudiAud 		v6r4
use GaudiDb 		v9r1
use GaudiRootDb 	v9r4
use GaudiPoolDb		v1r4
use GaudiObjDesc 	v6r2p1
use HbookCnv 		v14r1

#-- Databases
use XmlDDDB	v22r0	Det
use ParamFiles	v2r1	$(LHCb_release_area)/PARAM -no_auto_imports
use FieldMap	v4r3

#-- LHCb libraries (from LHCB_v15r3)
use LHCb	v15r3

#-- BooleSys v5r3 packages

use DigiAlg		v2r3	Digi
use LHCbTools		v1r0	Kernel

# L0 trigger
use L0Calo              v7r3	L0
use L0Muon              v6r7	L0
#use PuVeto              v5r5	L0
use L0DU                v6r7	L0

# L1 trigger
#use TrgTools		v2r1	Trg
#use TrgChecker		v2r0	Trg
#use TrgVelo		v2r0	Trg
#use TrgVeloTT		v2r0	Trg
#use L1Reco		v2r1	Trg

# Calorimeter
use CaloMonitor         v1r6	Calo
use CaloDigit           v1r5	Calo

# Velo
use VeloAlgorithms      v3r0	Velo

# Inner Tracker
use ITAlgorithms        v14r0	IT
use ITCheckers          v2r0	IT

# Outer Tracker
use OTAlgorithms        v13r4	OT
use OTDAQ               v1r1    OT

# Muon
use MuonAlgs            v5r2	Muon
use MuonBackground	v1r5	Muon
use MuonDAQ             v1r0    Muon

# Rich
use RichDigiQC	        v1r4  	Rich
use RichUtils		v3r7	Rich
use RichDetTools	v3r6	Rich
use RichReadout		v1r5	Rich
use RichDAQ		v1r2	Rich

#
#===== build Boole =========================
application Boole $(GAUDICONFROOT)/src/GaudiMain.cpp
# ========================= set macros ============================

macro Boole_linkopts    "${application_linkopts}"

apply_pattern application_path
