package Boole
version v5r4

branches doc cmt job options

# Set the default path for Boole options.
set BOOLEOPTS  $(BOOLEROOT)/options

#== Set the Boole version environment variable, read by BooleInit ==
pattern BooleVersion path_append BOOLEVERS <version>
apply_pattern BooleVersion

#-- CMT and GaudiPolicy
use GaudiPolicy v5r14

#-- External libraries (as defined in GAUDI_v14r3)
use ExternalLibs	v4r4
use AIDA		v3r300		-no_auto_imports
use BOOST		v2r1302p0	-no_auto_imports
use CLHEP		v2r1810p0	-no_auto_imports
use XERCES		v2r230p0	-no_auto_imports
use CERNLIB 		v2r2002p0	-no_auto_imports
use ROOT 		v2r31002p0	-no_auto_imports
use GSL 		v2r14p0	        -no_auto_imports
use PI  		v1r112	        -no_auto_imports
use PCRE		v1r44	        -no_auto_imports
use UUID		v1r32	        -no_auto_imports
use SEAL		v1r133p1	-no_auto_imports
use POOL		v1r150p1	-no_auto_imports

#-- Gaudi libraries (from GAUDI_v14r3)
use GaudiKernel		v15r2
use GaudiSvc 		v11r4
use GaudiAlg 		v7r1
use GaudiAud 		v6r4
use GaudiDb 		v9r2
use GaudiRootDb 	v9r4
use GaudiPoolDb		v1r5
use GaudiObjDesc 	v6r2p1
use HbookCnv 		v14r1

# Temporarily from LHCb v15r5, bug fixes needed by Rich
use GaudiTools		v8r1

#-- Databases
use XmlDDDB	v22r0	Det
use ParamFiles	v3r4	-no_auto_imports
use FieldMap	v4r5

#-- LHCb libraries (from LHCB_v15r5)
use LHCb	v15r5

#-- BooleSys v5r4 packages

use DigiAlg		v2r3	Digi
use LHCbTools		v1r0	Kernel

# L0 trigger
use L0Calo              v7r4	L0
use PuVeto              v5r6	L0
use L0DU                v6r7	L0
use L0mConf		v2r2	L0
use L0MuonKernel	v1r1	L0
use L0MuonTrigger	v1r1	L0

# L1 trigger
use TrgTools		v3r0	Trg
use TrgChecker		v3r0p1	Trg
use TrgVelo		v3r0	Trg
use TrgVeloTT		v3r0	Trg
use L1Reco		v3r0	Trg
use TrgMonitor		v1r0	Trg

# Calorimeter
use CaloMonitor         v2r1	Calo
use CaloDigit           v1r6	Calo

# Velo
use VeloAlgorithms      v2r9p2	Velo
use VeloDAQ		v1r0	Velo

# Inner Tracker
use ITAlgorithms        v14r2	IT
use ITCheckers          v2r2	IT
use STDAQ               v1r1    IT

# Outer Tracker
use OTAlgorithms        v13r4	OT
use OTDAQ               v1r1    OT

# Muon
use MuonAlgs            v5r2	Muon
use MuonBackground	v1r5	Muon
use MuonDAQ             v1r0    Muon

# Rich
use RichDigiQC	        v1r5  	Rich
use RichUtils		v3r8	Rich
use RichDetTools	v4r0	Rich
use RichReadout		v1r7	Rich
use RichDAQ		v1r3	Rich

#
#===== build Boole =========================
application Boole $(GAUDICONFROOT)/src/GaudiMain.cpp
# ========================= set macros ============================

macro Boole_linkopts    "${application_linkopts}"

apply_pattern application_path
