package Boole
version v2r0

branches doc cmt job options

# Set the default path for Boole options.
set BOOLEOPTS  $(BOOLEROOT)/options

#== Set the Boole version environment variable, read by BooleInit ==
pattern BooleVersion path_append BOOLEVERS <version>
apply_pattern BooleVersion

#-- CMT and GaudiPolicy
use GaudiPolicy v5r11p2

#-- External libraries (as defined in GAUDI_v12r0)
use ExternalLibs	v4r0p1
use AIDA		v3r22p2
use CLHEP		v2r1800p0
use HTL			v2r1321p0
use XERCES		v2r220p0
use CERNLIB 		v2r2002p0
use ROOT 		v2r30504p0
use GSL			v2r13p0

#-- Gaudi libraries (from GAUDI_v12r0)
use GaudiKernel		v13r4p1
use GaudiSvc 		v10r2
use GaudiAlg 		v6r4
use GaudiAud 		v6r2
use GaudiDb 		v8r4
use GaudiRootDb 	v9r2
use GaudiIntrospection 	v4r6
use HbookCnv 		v13r4

#-- Databases
use XmlDDDB	v18r1	Det
use ParamFiles	v2r1	$(LHCb_release_area)/PARAM -no_auto_imports
use FieldMap	v4r3

#-- LHCb libraries (from LHCB_v13r1)
use LHCb	v13r1

#-> SICB libraries included to avoid dependency on SICBOO package
use RiSicbGeom	v3r4	SICB

#-- BooleSys v2r0 packages

# LHC background
use DigiAlg		v2r0	Digi

# L0 trigger
use L0Calo              v7r1	L0
use L0Muon              v6r5p1	L0
use PuVeto              v5r4	L0
use L0DU                v6r5    L0

# L1 trigger
use L1VeloTrack         v5r2	L1
use L1Decision		v2r2	L1

# Calorimeter
use CaloInterfaces      v2r4  	Calo
use CaloUtils           v4r5	Calo
use CaloMonitor         v1r4  	Calo
use CaloDigit           v1r3	Calo

# Velo
use VeloAlgorithms      v2r8  	Velo

# Inner Tracker
use ITAlgorithms        v12r10	IT
use ITCheckers          v1r3p1	IT

# Outer Tracker
use OTAlgorithms        v13r2 	OT

# Muon
use MuonAlgs            v5r0    Muon
use MuonBackground	v1r3	Muon
use MuonUtils		v1r0	Muon

# Rich
use RichDigiQC	        v1r1  	Rich
use RichUtils		v3r3  	Rich
use RichDetTools	v3r0  	Rich
use RichReadout		v1r0	Rich

#
#===== build Boole =========================
application Boole $(GAUDICONFROOT)/src/GaudiMain.cpp
# ========================= set macros ============================

macro Boole_linkopts    "$(application_linkopts)"

macro_append Boole_linkopts " "\
                Linux        " -g -Wl,--start-group "\
                Linuxdbx     " -g -Wl,--start-group "

apply_pattern application_path

