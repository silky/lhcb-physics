package Boole
version v6r0

branches doc cmt job options

# Set the default path for Boole options.
set BOOLEOPTS  $(BOOLEROOT)/options

#== Set the Boole version environment variable, read by BooleInit ==
pattern BooleVersion path_append BOOLEVERS <version>
apply_pattern BooleVersion

#-- CMT and GaudiPolicy
use GaudiPolicy v5r15

use LHCbAlgs v1r0 Kernel

#-- External libraries (as defined in GAUDI_v14r6)
use ExternalLibs	v4r5
use AIDA		v3r300		-no_auto_imports
use BOOST		v2r1302p0	-no_auto_imports
use CLHEP		v2r1810p0	-no_auto_imports
use XERCES		v2r230p0	-no_auto_imports
use CERNLIB 		v2r2002p1	-no_auto_imports
use ROOT 		v2r31002p0	-no_auto_imports
use GSL 		v2r14p0	        -no_auto_imports
use PI  		v1r112p1        -no_auto_imports
use PCRE		v1r44	        -no_auto_imports
use UUID		v1r32	        -no_auto_imports
use SEAL		v1r134p0	-no_auto_imports
use POOL		v1r163p0	-no_auto_imports

#-- Gaudi libraries (from GAUDI_v14r6)
use GaudiKernel		v15r4
use GaudiSvc 		v11r7
use GaudiAlg 		v7r3
use GaudiTools		v8r1
use GaudiDb 		v9r2
use GaudiRootDb 	v9r4
use GaudiPoolDb		v1r6p1
use GaudiObjDesc 	v6r2p1
use HbookCnv 		v14r1

#-- Databases
use XmlDDDB	v22r2	Det
use ParamFiles	v3r6	-no_auto_imports
use FieldMap	v4r5

#-- LHCb libraries (from LHCB_v16r0)
use LHCb	v16r0

#-- BooleSys v6r0 packages

use DigiAlg		v2r4	Digi
use AsctToLinker        v1r2    Rec

# L0 trigger
use L0Calo              v7r6	L0
use PuVeto              v5r7	L0
use L0DU                v6r7	L0
use L0mConf		v2r2	L0
use L0MuonKernel	v1r1	L0
use L0MuonTrigger	v1r1p1	L0

# Calorimeter
use CaloMonitor         v2r2	Calo
use CaloDigit           v1r6	Calo

# Velo
use VeloAlgorithms      v2r9p2	Velo
use VeloDAQ		v1r0	Velo

# Inner Tracker
use ITAlgorithms        v14r3	IT
use ITCheckers          v2r3	IT
use STDAQ               v1r2    IT

# Outer Tracker
use OTAlgorithms        v13r4	OT
use OTDAQ               v2r0    OT

# Muon
use MuonAlgs            v5r5	Muon
use MuonBackground	v1r7	Muon
use MuonDAQ             v1r1    Muon

# Rich
use RichDigiQC	        v1r7  	Rich
use RichReadout		v1r9	Rich

#
#===== build Boole =========================
application Boole $(GAUDICONFROOT)/src/GaudiMain.cpp
# ========================= set macros ============================

macro Boole_linkopts    "${application_linkopts}"

apply_pattern application_path
