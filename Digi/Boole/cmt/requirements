package Boole
version v9r0

branches doc cmt job options

# Set the default path for Boole options.
set BOOLEOPTS  $(BOOLEROOT)/options

#-- CMT and GaudiPolicy
use GaudiPolicy v5r20

#-- External libraries now taken from LCG, version defined by GaudiEnv

#-- Gaudi libraries (from GAUDI_v16r3)
use GaudiKernel		v19r1
use GaudiSvc 		v13r3
use GaudiAlg 		v8r7
use GaudiPoolDb		v1r12
use GaudiObjDesc 	v7r3
use RootHistCnv         v9r4

#-- Databases
use XmlDDDB	v24r1	Det
use ParamFiles	v3r11	-no_auto_imports
use FieldMap	v4r5
use BooleDQ	v1r0	DQ

#-- LHCb libraries (from LHCB_v18r4)
use LHCb	v18r4

#-- Lbcom packages (from LBCOM_v2r0)
use LbcomSys    v2r0

#-- BooleSys v9r0 packages

use DigiAlg		v3r0	Digi

# Calorimeter
use CaloMoniDigi        v1r0	Calo
use CaloDigit           v1r8	Calo

# Velo
use VeloAlgorithms      v3r3	Velo

# Outer Tracker
use OTSimulation	v1r4	OT

# Muon
use MuonAlgs            v5r7	Muon
use MuonBackground	v1r10p1	Muon

# Rich
use RichDigiQC	        v2r1  	Rich
use RichReadout		v1r12	Rich

#===== build Boole =========================
application Boole $(GAUDICONFROOT)/src/GaudiMain.cpp
# ========================= set macros ============================

macro Boole_linkopts    "${application_linkopts}"

apply_pattern application_path
