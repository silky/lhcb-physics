package Boole
version v12r7

branches doc cmt job options

# Set the default path for Boole options.
set BOOLEOPTS  $(BOOLEROOT)/options

#-- CMT and GaudiPolicy
use GaudiPolicy v6r0

#-- External libraries taken from LCG, version defined by GaudiEnv
use RELAX v* LCG_Interfaces          -no_auto_imports

#-- Gaudi libraries (from GAUDI_v18r8)
use GaudiKernel      v20r10
use GaudiSvc         v14r11      -no_auto_imports
use GaudiAlg         v9r9        -no_auto_imports
use GaudiAud         v7r1        -no_auto_imports
use GaudiPoolDb      v2r8        -no_auto_imports
use RootHistCnv      v9r10       -no_auto_imports

#-- Databases
use XmlDDDB          v30r11  Det  -no_auto_imports
use XmlConditions    v2r3    Det  -no_auto_imports
use ParamFiles       v4r4         -no_auto_imports
use FieldMap         v4r7         -no_auto_imports

#-- LHCb libraries (from LHCB_v21r9)
#-- Explicitly use EventSys packages to avoid dependency on PhysEvent
use GaudiConf        v9r10          -no_auto_imports
use GaudiObjDesc     v9r7p1         -no_auto_imports
use KernelSys        v5r13   Kernel -no_auto_imports
use DetSys           v8r13   Det    -no_auto_imports

use EventBase        v1r2    Event  -no_auto_imports
use MCEvent          v1r6    Event  -no_auto_imports
use DigiEvent        v1r2    Event  -no_auto_imports
use RecEvent         v1r9    Event  -no_auto_imports  # used by MuonDAQ, Calo
use TrackEvent       v3r4    Event  -no_auto_imports  # used by RecEvent
use L0Event          v15r3   Event  -no_auto_imports
use DAQEvent         v6r7p1  Event  -no_auto_imports
use GenEvent         v4r5    Event  -no_auto_imports
use PackedEvent      v2r1    Event  -no_auto_imports
use VeloEvent        v14r0   Event  -no_auto_imports

use HepMC         v1r126p0   Gen    -no_auto_imports
use DAQSys           v2r9    DAQ    -no_auto_imports
use LHCbAlgs         v2r4    Kernel -no_auto_imports
use SimComponents    v1r2p1  Sim    -no_auto_imports

#-- Lbcom packages (from LBCOM_v5r6)
use LbcomSys         v5r6           -no_auto_imports

#-- BooleSys v12r7 packages
use DigiAlg              v4r4p2 Digi -no_auto_imports

# Calorimeter
use CaloMoniDigi         v2r1   Calo -no_auto_imports
use CaloDigit            v2r1p1 Calo -no_auto_imports

# Outer Tracker
use OTSimulation         v3r7   OT   -no_auto_imports

# Muon
use MuonAlgs             v6r0p1 Muon -no_auto_imports
use MuonBackground       v2r1   Muon -no_auto_imports
use MuonMoniDigi         v2r0   Muon -no_auto_imports
use MuonAssociators      v2r0   Muon -no_auto_imports

# Rich
use RichDigiQC	         v3r2  	Rich -no_auto_imports
use RichReadout		 v2r2   Rich -no_auto_imports
use RichMCAssociators    v2r1   Rich -no_auto_imports

#===== build Boole =========================
application Boole $(GAUDICONFROOT)/src/GaudiMain.cpp
# ========================= set macros ============================

macro Boole_linkopts    "${application_linkopts}"

apply_pattern application_path
