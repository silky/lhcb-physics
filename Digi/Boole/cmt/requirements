package Boole
version v12r8

branches doc cmt job options

# Set the default path for Boole options.
set BOOLEOPTS  $(BOOLEROOT)/options

#-- CMT and GaudiPolicy
use GaudiPolicy v6r0

#-- External libraries taken from LCG, version defined by GaudiEnv
use RELAX v* LCG_Interfaces          -no_auto_imports

#-- Gaudi libraries (from GAUDI_v18r9)
use GaudiKernel      v*
use GaudiSvc         v*        -no_auto_imports
use GaudiAlg         v*        -no_auto_imports
use GaudiAud         v*        -no_auto_imports
use GaudiPoolDb      v*        -no_auto_imports
use RootHistCnv      v*        -no_auto_imports

#-- Databases
use XmlDDDB          v30r12  Det  -no_auto_imports
use XmlConditions    v2r4    Det  -no_auto_imports
use ParamFiles       v4r4         -no_auto_imports
use FieldMap         v4r7         -no_auto_imports

#-- LHCb libraries (from LHCB_v21r10)
#-- Explicitly use EventSys packages to avoid dependency on PhysEvent
use GaudiConf        v*           -no_auto_imports
use GaudiObjDesc     v*           -no_auto_imports
use KernelSys        v*    Kernel -no_auto_imports
use DetSys           v*    Det    -no_auto_imports

use EventBase        v*    Event  -no_auto_imports
use MCEvent          v*    Event  -no_auto_imports
use DigiEvent        v*    Event  -no_auto_imports
use RecEvent         v*    Event  -no_auto_imports  # used by MuonDAQ, Calo
use TrackEvent       v*    Event  -no_auto_imports  # used by RecEvent
use L0Event          v*    Event  -no_auto_imports
use DAQEvent         v*    Event  -no_auto_imports
use GenEvent         v*    Event  -no_auto_imports
use PackedEvent      v*    Event  -no_auto_imports
use VeloEvent        v*    Event  -no_auto_imports

use HepMC            v*    LCG_Interfaces    -no_auto_imports
use DAQSys           v*    DAQ    -no_auto_imports
use LHCbAlgs         v*    Kernel -no_auto_imports
use SimComponents    v*    Sim    -no_auto_imports

#-- Lbcom packages (from LBCOM_v5r7)
use LbcomSys         v5r7           -no_auto_imports

#-- BooleSys v12r8 packages
use DigiAlg              v4r4p2 Digi -no_auto_imports

# Calorimeter
use CaloMoniDigi         v2r1   Calo -no_auto_imports
use CaloDigit            v2r1p1 Calo -no_auto_imports

# Outer Tracker
use OTSimulation         v3r7   OT   -no_auto_imports

# Muon
use MuonAlgs             v6r0p1 Muon -no_auto_imports
use MuonBackground       v2r1   Muon -no_auto_imports
use MuonMoniDigi         v2r0   Muon -no_auto_imports
use MuonAssociators      v2r0   Muon -no_auto_imports

# Rich
use RichDigiQC	         v3r2  	Rich -no_auto_imports
use RichReadout		 v2r2   Rich -no_auto_imports
use RichMCAssociators    v2r1   Rich -no_auto_imports

#===== build Boole =========================
application Boole $(GAUDICONFROOT)/src/GaudiMain.cpp
# ========================= set macros ============================

macro Boole_linkopts    "${application_linkopts}"

apply_pattern application_path
