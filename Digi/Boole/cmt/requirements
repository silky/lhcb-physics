package Boole
version v4r0

branches doc cmt job options

# Set the default path for Boole options.
set BOOLEOPTS  $(BOOLEROOT)/options

#== Set the Boole version environment variable, read by BooleInit ==
pattern BooleVersion path_append BOOLEVERS <version>
apply_pattern BooleVersion

#-- CMT and GaudiPolicy
use GaudiPolicy v5r14

#-- External libraries (as defined in GAUDI_v13r0)
use ExternalLibs	v4r4
use AIDA		v3r300		-no_auto_imports
use BOOST		v2r1302p0	-no_auto_imports
use CLHEP		v2r1810p0
use XERCES		v2r230p0
use CERNLIB 		v2r2002p0
use ROOT 		v2r31001p1
use GSL			v2r14p0
use PI			v1r100

#-- Gaudi libraries (from GAUDI_v13r0)
use GaudiKernel		v14r2
use GaudiSvc 		v11r0
use GaudiAlg 		v6r4
use GaudiAud 		v6r3
use GaudiDb 		v9r0
use GaudiRootDb 	v9r3
use GaudiIntrospection 	v4r7
use HbookCnv 		v14r0

#-- Databases
use XmlDDDB	v20r0	Det
use ParamFiles	v2r1	$(LHCb_release_area)/PARAM -no_auto_imports
use FieldMap	v4r3

#-- LHCb libraries (from LHCB_v14r0)
use LHCb	v14r0

#-> SICB libraries included to avoid dependency on SICBOO package
use RiSicbGeom	v3r7	SICB

#-- BooleSys v3r0 packages

use DigiAlg		v2r2	Digi
use LHCbTools		v1r0	Kernel

# L0 trigger
use L0Calo              v7r1	L0
use L0Muon              v6r6	L0
use PuVeto              v5r4	L0
use L0DU                v6r5    L0

# L1 trigger
use L1VeloTrack         v5r5	L1
use L1Decision		v2r3	L1

# Calorimeter
use CaloInterfaces      v3r0  	Calo
use CaloUtils           v4r5	Calo
use CaloMonitor         v1r5	Calo
use CaloDigit           v1r4p1	Calo

# Velo
use VeloAlgorithms      v2r8  	Velo

# Inner Tracker
use ITAlgorithms        v13r0p1	IT
use ITCheckers          v1r4	IT

# Outer Tracker
use OTAlgorithms        v13r4	OT

# Muon
use MuonAlgs            v5r0    Muon
use MuonBackground	v1r4p1	Muon

# Rich
use RichDigiQC	        v1r3  	Rich
use RichUtils		v3r6	Rich
use RichDetTools	v3r4	Rich
use RichReadout		v1r3	Rich
use RichDAQ		v1r0p1	Rich

#
#===== build Boole =========================
application Boole $(GAUDICONFROOT)/src/GaudiMain.cpp
# ========================= set macros ============================

macro Boole_linkopts    "${application_linkopts}"

apply_pattern application_path
