package Boole
version v7r3

branches doc cmt job options

# Set the default path for Boole options.
set BOOLEOPTS  $(BOOLEROOT)/options

#== Set the Boole version environment variable, read by BooleInit ==
pattern BooleVersion path_append APPVERSION <version>
apply_pattern BooleVersion

#-- CMT and GaudiPolicy
use GaudiPolicy v5r19

#-- External libraries now taken from LCG, version defined by GaudiEnv

#-- Gaudi libraries (from GAUDI_v15r3)
use GaudiKernel		v17r0
use GaudiSvc 		v12r6
use GaudiAlg 		v8r2
use GaudiPoolDb		v1r10p1
use HbookCnv 		v14r2p1

#-- Databases
use XmlDDDB	v23r1	Det
use ParamFiles	v3r9	-no_auto_imports
use FieldMap	v4r5
use BooleDQ	v1r0	DQ

#-- LHCb libraries (from LHCB_v17r3)
use LHCb	v17r3
use GaudiObjDesc 	v7r0

#-- BooleSys v7r3 packages

use DigiAlg		v3r0	Digi
use AsctToLinker        v1r3    Rec

# L0 trigger
use L0Calo              v8r0	L0
use PuVeto              v6r0	L0
use L0DU                v6r7p2	L0
use L0mConf		v2r2p3	L0
use L0MuonKernel	v2r3	L0
use L0MuonTrigger	v2r3p1	L0

# Calorimeter
use CaloMoniDigi        v1r0	Calo
use CaloDigit           v1r8	Calo

# Velo
use VeloAlgorithms      v3r2	Velo

# Inner Tracker
use ITAlgorithms        v14r4	IT
use ITCheckers          v2r4	IT

# Outer Tracker
use OTSimulation	v1r3	OT
use OTMonitor		v1r1	OT

# Muon
use MuonAlgs            v5r6	Muon
use MuonBackground	v1r8	Muon

# Rich
use RichDigiQC	        v2r0  	Rich
use RichReadout		v1r11	Rich

#
#===== build Boole =========================
application Boole $(GAUDICONFROOT)/src/GaudiMain.cpp
# ========================= set macros ============================

macro Boole_linkopts    "${application_linkopts}"

apply_pattern application_path
