//////////////////////////////////////////////////////////////////////////////
/// Job options for Boole, for data produced by Gauss v14r1 or greater and ///
/// with XmlDDDB v21r0 or greater and geometry compatible with lhcb-200402 ///
//////////////////////////////////////////////////////////////////////////////
#pragma print off
InitDataSeq.Members += { "MergeEventAlg/SpilloverAlg" }; // Adds Spillover
InitDataSeq.Members += { "MergeEventAlg/LHCbkgAlg" };    // Adds LHC background
#include "$BOOLEOPTS/Boole.opts"          // Generic options for all jobs
#include "$BOOLEOPTS/BooleMoniProd.opts"  // Default monitoring for production
ApplicationMgr.OutStream += { "DigiWriter" };  // Comment to switch off output
//---------------------------------------------------------------------------
// Database specific options
//--------------------------------------------------------------------------- 
#pragma print on
DetectorDataSvc.DetDbLocation = "$XMLDDDBROOT/DDDB/lhcb-200402.xml";

//---------------------------------------------------------------------------
// Add here any job specific options, to over-ride previously defined options
//---------------------------------------------------------------------------

//---------------------------------------------------------------------------
// Finally, define input and output files, first event, number of events
//---------------------------------------------------------------------------
HistogramPersistencySvc.OutputFile = "411300.hbook";  // Monitoring histos
ApplicationMgr.EvtMax = 500;

// Uncomment next three lines to skip some input events
//EventSelector.FirstEvent = 7;
//SpillOverSelector.FirstEvent = 10; // Skip corresponding spillover events
//LHCBkgSelector.FirstEvent = 7; // Skip corresponding background events

// GaudiDb input
EventSelector.Input = { "DATAFILE='/afs/cern.ch/lhcb/group/tracking/vol2/mneedham/new.root' TYP='ROOT' OPT='READ'" }; // Gauss v14r1, XmlDDDB v21r0, evtype 61?
SpilloverSelector.Input = { "DATAFILE='rfio:/castor/cern.ch/lhcb/prod/00000421_00000001_1.oosim' TYP='ROOT' OPT='READ'" }; // Gauss v14r1, XmlDDDB v21r0, evtype 61
LHCBkgSelector.Input = { "DATAFILE='rfio:/castor/cern.ch/user/l/lhcbprod/test/00000357_00000008_5.oosim' TYP='ROOT' OPT='READ'" }; // "Maximal" LHC background. SicbToOORawh v3r1

// GaudiDb output. Comment next line for POOL output
DigiWriter.Output = "DATAFILE='411300.oodigi' TYP='ROOT' OPT='NEW'";

// Uncomment next line for POOL output. Mandatory if POOL input
//DigiWriter.Output = "DATAFILE='PFN:411300.digi' TYP='POOL_ROOTTREE' OPT='REC'";
