}; // Gauss v12r7, XmlDDDB v19r0, evtype 412400
//EventSelector.FirstEvent = 7;
SpilloverSelector.Input = {
  "DATAFILE='rfio:/castor/cern.ch/user/l/lhcbprod/test/00000357_00000008_1.oosim' TYP='ROOT' OPT='READ'"
