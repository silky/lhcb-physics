//////////////////////////////////////////////////////////////////////////////
/// Job options for Boole, for data produced by Gauss v12r5 or greater and ///
/// with XmlDDDB v19r0 or greater and geometry compatible with lhcb-200311 ///
//////////////////////////////////////////////////////////////////////////////
#pragma print off
InitDataSeq.Members += { "MergeEventAlg/SpilloverAlg" }; // Adds Spillover
InitDataSeq.Members += { "MergeEventAlg/LHCbkgAlg" };    // Adds LHC background
#include "$BOOLEOPTS/Boole.opts"          // Generic options for all jobs
#include "$BOOLEOPTS/BooleMoniProd.opts"  // Default monitoring for production
ApplicationMgr.OutStream += { "DigiWriter" };  // Comment to switch off output
//---------------------------------------------------------------------------
// Database specific options
//---------------------------------------------------------------------------
#pragma print on
DetectorDataSvc.DetDbLocation = "$XMLDDDBROOT/DDDB/lhcb-200311.xml";

//---------------------------------------------------------------------------
// Add here any job specific options, to over-ride previously defined options
//---------------------------------------------------------------------------

//---------------------------------------------------------------------------
// Finally, define input and output files, first event, number of events
//---------------------------------------------------------------------------
HistogramPersistencySvc.OutputFile = "412400.hbook";  // Monitoring histos
ApplicationMgr.EvtMax = 500;

// Uncomment next three lines to skip some input events
//EventSelector.FirstEvent = 7;
//SpillOverSelector.FirstEvent = 10; // Skip corresponding spillover events
//LHCBkgSelector.FirstEvent = 7; // Skip corresponding background events 


// GaudiDb input
EventSelector.Input = {
  "DATAFILE='rfio:/castor/cern.ch/user/j/jonrob/data/oosim/Gauss-412400-500evts_1.oosim' TYP='ROOT' OPT='READ'"
}; // Gauss v12r7, XmlDDDB v19r0, evtype 412400
SpilloverSelector.Input = {
  "DATAFILE='rfio:/castor/cern.ch/user/l/lhcbprod/test/00000357_00000008_1.oosim' TYP='ROOT' OPT='READ'"
, "DATAFILE='rfio:/castor/cern.ch/user/l/lhcbprod/test/00000357_00000008_2.oosim' TYP='ROOT' OPT='READ'"
}; // Gauss v12r7, XmlDDDB v19r0, evtype 61
LHCBkgSelector.Input = { 
  "DATAFILE='rfio:/castor/cern.ch/user/l/lhcbprod/test/00000357_00000008_5.oosim' TYP='ROOT' OPT='READ'" }; // "Maximal" LHC background. SicbToOORawh v3r1 


// GaudiDb output. Comment next two lines if POOL output
DigiWriter.Output = "DATAFILE='412400.oodigi' TYP='ROOT' OPT='NEW'";
#include "$BOOLEOPTS/L1Output.opts" // Digi classes not yet working with POOL


