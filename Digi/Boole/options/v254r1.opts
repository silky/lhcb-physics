// Finally, define input and output files, first event, number of events
//---------------------------------------------------------------------------
EventSelector.Input = {
  "DATAFILE='rfio:/castor/cern.ch/user/c/cattanem/oorawh/v3r0/00000088_00000001_3.oosim' TYP='ROOT' OPT='READ'"
}; // RAWH2 evtype 411300
//EventSelector.FirstEvent = 7; // Skip 6 events
SpillOverSelector.Input = {
  "DATAFILE='rfio:/castor/cern.ch/user/c/cattanem/oorawh/v3r0/00000088_00000001_1.oosim' TYP='ROOT' OPT='READ'"
, "DATAFILE='rfio:/castor/cern.ch/user/c/cattanem/oorawh/v3r0/00000088_00000001_2.oosim' TYP='ROOT' OPT='READ'"
}; // evtype 61 RAWH2
//SpillOverSelector.FirstEvent = 10; // Skip corresponding spillover events
LHCBkgSelector.Input = { 
  "DATAFILE='rfio:/castor/cern.ch/lhcb/background/LHC/oosim/00000310_00000004_5.oosim' TYP='ROOT' OPT='READ'" }; // Test file, "Maximal" LHC background 
//LHCBkgSelector.FirstEvent = 7; // Skip corresponding background events 
DigiWriter.Output = "DATAFILE='00000088_00000001_4.oodigi' TYP='ROOT' OPT='NEW'";
HistogramPersistencySvc.OutputFile = "00000088_00000001_4.hbook";  // Monitoring histos
ApplicationMgr.EvtMax = 500;
