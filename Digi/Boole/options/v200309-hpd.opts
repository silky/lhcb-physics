//////////////////////////////////////////////////////////////////////////////
/// Job options for Boole, for data produced by Gauss v12r5 or greater and ///
///   with XmlDDDB geometry compatible with lhcb-200309-hpd (HPD version)  ///
//////////////////////////////////////////////////////////////////////////////
#pragma print off
Digi.DetectorList = { "Spillover" };      // Comment to switch off spillover
Digi.DetectorList += { "Bkg" };           // Comment to switch off LHC background
#include "$BOOLEOPTS/Boole.opts"          // Generic options for all jobs
#include "$BOOLEOPTS/BooleMoniProd.opts"  // Default monitoring for production
#include "$BOOLEOPTS/BooleOutput.opts"    // Comment to switch off output

//---------------------------------------------------------------------------
// Database specific options
//---------------------------------------------------------------------------
DetectorDataSvc.DetDbLocation = "$XMLDDDBROOT/DDDB/lhcb-200309-hpd.xml";
#include "$RICHREADOUTOPTS/BooleDigiHPD.opts"
#pragma print on

//---------------------------------------------------------------------------
// Add here any job specific options, to over-ride previously defined options
//---------------------------------------------------------------------------

//---------------------------------------------------------------------------
// Finally, define input and output files, first event, number of events
//---------------------------------------------------------------------------
EventSelector.Input = {
  "DATAFILE='/afs/cern.ch/user/w/witoldp/w0/Gaussjobs/360000_1310.oosim' TYP='ROOT' OPT='READ'"
}; // Gauss, evtype 360000
//EventSelector.FirstEvent = 7;
SpilloverSelector.Input = {
  "DATAFILE='/afs/cern.ch/user/w/witoldp/w0/Gaussjobs/0810.oosim' TYP='ROOT' OPT='READ'"
}; // SICBMC evtype 61
//SpillOverSelector.FirstEvent = 10; // Skip corresponding spillover events
LHCBkgSelector.Input = { 
  "DATAFILE='rfio:/castor/cern.ch/lhcb/background/LHC/oosim/00000310_00000004_5.oosim' TYP='ROOT' OPT='READ'" }; // Test file, "Maximal" LHC background 
//LHCBkgSelector.FirstEvent = 7; // Skip corresponding background events 
DigiWriter.Output = "DATAFILE='360000_1310.oodigi' TYP='ROOT' OPT='NEW'";
HistogramPersistencySvc.OutputFile = "360000_1310.hbook";  // Monitoring histos
ApplicationMgr.EvtMax = 200;
