package Brunel
version v21r2

branches doc cmt job options

#== Set the Brunel version environment variable, read by BrunelInit ==
pattern BrunelVersion path_append BRUNELVERS <version>
apply_pattern BrunelVersion

#-- CMT and GaudiPolicy
use GaudiPolicy v5r11p2

#-- External libraries (as defined in GAUDI_v12r0)
use ExternalLibs	v4r0p1
use AIDA		v3r22p2
use CLHEP		v2r1800p0
use HTL			v2r1321p0
use GSL			v2r13p0
use XERCES		v2r220p0
use CERNLIB 		v2r2002p0
use ROOT 		v2r30504p0

#-- Gaudi libraries (from GAUDI_v12r0)
use GaudiKernel		v13r4p1
use GaudiSvc 		v10r2
use GaudiAlg 		v6r4
use GaudiAud 		v6r2
use GaudiGSL		v3r0
use GaudiDb 		v8r4
use GaudiRootDb 	v9r2
use GaudiIntrospection 	v4r6
use GaudiObjDesc 	v5r0
use HbookCnv 		v13r4

#-- Database
use XmlDDDB		v20r0	Det
use ParamFiles          v2r1    $(LHCb_release_area)/PARAM -no_auto_imports

#-- LHCb libraries (from LHCB_v13r5)
use LHCb	v13r5

#-- BrunelSys v21r2 packages

# Phys utilities
use MCTools		v1r1p1	Phys

# Brunel utilities
use BrunelAlgs          v3r2	Rec

# Calorimeter
use CaloInterfaces      v2r4  	Calo
use CaloUtils           v4r5  	Calo
use CaloMonitor         v1r4  	Calo
use CaloReco            v1r6p1	Calo
use CaloPIDs		v1r1	Calo

# Velo
use VeloAlgorithms      v2r8  	Velo

# Inner Tracker
use ITAlgorithms        v13r0	IT
use ITCheckers          v1r4	IT

# Outer Tracker
use OTAlgorithms        v13r4	OT

# Tracking
use VeloTrack           v5r1  	Velo
use TrCheck             v2r2	Tr
use LongTrack           v1r9	Tr
use TrFitter            v3r7	Tr
use TrExtrapolator      v2r8	Tr
use TrTools             v2r5 	Tr
use Seeding             v2r6	Tr 
use TrMatching          v2r7	Tr
use TrCleanEx           v2r7p1	Tr
use TrIntraPR           v2r7	Tr
use UpstreamPR          v2r8  	Tr
use VeloTT              v1r6p1	Tr

# Muon
use MuonUtils		v1r0	Muon
use MuonRec             v2r3    Muon
use MuonID              v3r6    Muon

# Rich
use RichUtils		v3r5  	Rich
use RichDetTools	v3r3	Rich
use RichRecSys		v1r4	Rich
use RichRecQC		v1r3	Rich
use RichRecMCTools	v1r1	Rich
use RiSicbGeom          v3r6	SICB

#
#===== build Brunel =========================
application Brunel $(GAUDICONFROOT)/src/GaudiMain.cpp
# ========================= set macros ============================

macro Brunel_linkopts    "$(application_linkopts)"

apply_pattern application_path

# Set the default path for Brunel options.
set BRUNELOPTS ${BRUNELROOT}/options

