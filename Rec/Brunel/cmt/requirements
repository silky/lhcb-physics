package Brunel
version v23r6

branches doc cmt job options

#== Set the Brunel version environment variable, read by BrunelInit ==
pattern BrunelVersion path_append BRUNELVERS <version>
apply_pattern BrunelVersion

#-- CMT and GaudiPolicy
use GaudiPolicy v5r15

#-- External libraries (as defined in GAUDI_v14r4)
use ExternalLibs	v4r5
use AIDA		v3r300		-no_auto_imports
use CLHEP		v2r1810p0	-no_auto_imports
use GSL 		v2r14p0		-no_auto_imports
use XERCES		v2r230p0	-no_auto_imports
use CERNLIB 		v2r2002p0	-no_auto_imports
use ROOT 		v2r31002p0      -no_auto_imports
use PI  		v1r112p1	-no_auto_imports
use PCRE		v1r44		-no_auto_imports
use UUID		v1r32		-no_auto_imports
use SEAL		v1r134p0	-no_auto_imports
use POOL		v1r162p0	-no_auto_imports

#-- Gaudi libraries (from GAUDI_v14r4)
use GaudiKernel		v15r2
use GaudiSvc 		v11r6
use GaudiAlg 		v7r2
use GaudiTools          v8r1
use GaudiAud 		v6r4
use GaudiGSL		v6r0
use GaudiDb 		v9r2
use GaudiRootDb 	v9r4
use GaudiPoolDb		v1r6
use GaudiObjDesc 	v6r2p1
use RootHistCnv         v9r1

#-- Database
use XmlDDDB		v22r1	Det
use FieldMap		v4r5
use ParamFiles          v3r5    -no_auto_imports

#-- LHCb libraries (from LHCB_v15r7)
use LHCb	v15r7

#-- BrunelSys v23r6 packages

# Tools
use LHCbTools		v1r1	Kernel
use AsctToLinker        v1r1    Rec

# Brunel utilities
use BrunelAlgs          v3r4p1	Rec

# Calorimeter
use CaloMonitor         v2r2  	Calo
use CaloReco            v2r1p1	Calo
use CaloPIDs		v2r2	Calo

# Velo
use VeloDAQ		v1r0	Velo

# Inner Tracker
use ITAlgorithms        v14r2	IT
use ITCheckers          v2r2	IT
use STDAQ               v1r1    IT

# Outer Tracker
use OTAlgorithms        v13r4	OT
use OTDAQ               v2r0    OT

# Tracking
use TrFitEvent          v4r4    Tr
use TrFitAssociators    v1r1    Tr    
use VeloTrack           v5r1  	Velo
use TrCheck             v2r4	Tr
use LongTrack           v1r11	Tr
use TrFitter            v3r7p1	Tr
use TrExtrapolator      v2r10	Tr
use TrTools             v2r5 	Tr
use Seeding             v2r8	Tr 
use TrMatching          v2r9	Tr
use TrCleanEx           v2r9	Tr
use VeloTT              v1r9	Tr
use TrKShort		v1r3	Tr

# Muon
use MuonUtils		v1r0	Muon
use MuonRec             v2r4	Muon
use MuonID              v3r7p1	Muon
use MuonDAQ             v1r1    Muon

# Rich
use RichUtils		v3r8  	Rich
use RichDetTools	v4r0	Rich
use RichRecSys		v1r8	Rich
use RichRecQC		v1r6	Rich
use RichMCTools		v1r1	Rich

#
#===== build Brunel =========================
application Brunel $(GAUDICONFROOT)/src/GaudiMain.cpp
# ========================= set macros ============================

macro Brunel_linkopts    "$(application_linkopts)"

apply_pattern application_path

# Set the default path for Brunel options.
set BRUNELOPTS ${BRUNELROOT}/options
