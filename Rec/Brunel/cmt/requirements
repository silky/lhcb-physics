package Brunel
version v30r11

branches doc cmt job options

#-- CMT and GaudiPolicy
use GaudiPolicy v5r25

#-- External libraries now taken from LCG, version defined by GaudiEnv
use RELAX v* LCG_Interfaces          -no_auto_imports

#-- Gaudi libraries (from GAUDI_v18r7)
use GaudiKernel		v20r9
use GaudiSvc 		v14r10       -no_auto_imports
use GaudiAlg 		v9r8         -no_auto_imports
use GaudiAud 	        v7r1         -no_auto_imports
use GaudiGSL		v6r4         -no_auto_imports
use GaudiPoolDb	        v2r6         -no_auto_imports
use RootHistCnv         v9r10         -no_auto_imports

#-- Database
use XmlDDDB             v30r11  Det  -no_auto_imports
use XmlConditions       v2r3    Det  -no_auto_imports
use FieldMap		v4r7         -no_auto_imports
use ParamFiles          v4r4         -no_auto_imports

#-- LHCb libraries (from LHCB_v21r9)
use LHCb                v21r9        -no_auto_imports
use PatTools            v2r8    Pat  -no_auto_imports
use GaudiObjDesc 	v9r7p1       -no_auto_imports

#-- Lbcom packages (from LBCOM_v5r6)
use LbcomSys            v5r6         -no_auto_imports

#-- Rec packages (from REC_v3r11)
use RecSys              v3r11        -no_auto_imports

#
#===== build Brunel =========================
application Brunel $(GAUDICONFROOT)/src/GaudiMain.cpp
# ========================= set macros ============================

macro Brunel_linkopts    "$(application_linkopts)"

apply_pattern application_path

# Set the default path for Brunel options.
set BRUNELOPTS ${BRUNELROOT}/options
