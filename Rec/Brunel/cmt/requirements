package Brunel
version v30r12

branches doc cmt job options

#-- CMT and GaudiPolicy
use GaudiPolicy v6r0

#-- External libraries now taken from LCG, version defined by GaudiEnv
use RELAX v* LCG_Interfaces          -no_auto_imports

#-- Gaudi libraries (from GAUDI_v18r9)
use GaudiKernel		v*
use GaudiSvc 		v*         -no_auto_imports
use GaudiAlg 		v*         -no_auto_imports
use GaudiAud 	        v*         -no_auto_imports
use GaudiGSL		v*         -no_auto_imports
use GaudiPoolDb	        v*         -no_auto_imports
use RootHistCnv         v*         -no_auto_imports

#-- Database
use XmlDDDB             v30r12  Det  -no_auto_imports
use XmlConditions       v2r4    Det  -no_auto_imports
use FieldMap		v4r7         -no_auto_imports
use ParamFiles          v4r4         -no_auto_imports

#-- LHCb libraries (from LHCB_v21r10)
use LHCb                v21r10        -no_auto_imports
use PatTools            v*    Pat     -no_auto_imports
use GaudiObjDesc 	v*            -no_auto_imports

#-- Lbcom packages (from LBCOM_v5r7)
use LbcomSys            v5r7         -no_auto_imports

#-- Rec packages (from REC_v3r12)
use RecSys              v3r12        -no_auto_imports

#
#===== build Brunel =========================
application Brunel $(GAUDICONFROOT)/src/GaudiMain.cpp
# ========================= set macros ============================

macro Brunel_linkopts    "$(application_linkopts)"

apply_pattern application_path

# Set the default path for Brunel options.
set BRUNELOPTS ${BRUNELROOT}/options
