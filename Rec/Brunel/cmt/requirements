package Brunel
version v3

branches doc cmt src job options Brunel

ignore_pattern package_stamps

# Set the default paths for Brunel and SICBDST data cards.
set BRUNELOPTS ${BRUNELROOT}/options
set JOBOPTPATH ${BRUNELOPTS}/Brunel.opts
set SICBCARDS  ${BRUNELOPTS}/Brunel.cards

# Next line to force static build to go into LinuxStatic directory
ignore_pattern   package_tag
version_strategy first_choice

# Gaudi Configuration options
use GaudiConf    v4

# Gaudi Framework 
use GaudiSys     v7r2
use HbookCnv     v9

# Additional external libraries
use XML          v3r1
use CERNLIB      v2000

# Brunel utilities
use BrunelKernel v1     Rec

# Detector description
use DetDesc      v6     Det
use XmlDDDB      v5     Det
use CaloDet      v1     Det

# Event Model
use LHCbEvent    v10    Event
use VeloEvent    v4     Event
use ITEvent      v4     Event
use OTEvent      v4     Event
use TrEvent      v4r1*     Event
use CaloEvent    v5     Event

# Calorimeter digitisation
use CaloGen      v1     Calo
use CaloAlgs     v2     Calo

# Tracking
use TrKernel     v4     Tr
use ITAlgorithms v4*	IT
use OTAlgorithms v4	OT
use TrAlgorithms v4r1*	Tr

# SicB event data persistency
use SicbCnv      v12    SICB
use CaloSicbCnv  v3     SICB
use TrSicbCnv    v1     SICB
use VSicbCnv     v4	SICB

use dbase        v238   SICB
use Futio        v11    SICB
use GDUMMY       v1r4   SICB

# SICBDST packages
use Futil        v10r1  SICB
use detdes       v13    SICB
use recevt       v3r4   SICB

use digmuon      v4     SICB
use digvdet      v2r2   SICB

use rececal      v7     SICB
use rechcal      v6     SICB
use recrich      v5r4   SICB

use axreclib     v4r2   SICB

use trihadr      v4     SICB
use trilvl2      v5r1   SICB
use trimuon      v5     SICB
use trit0v       v5     SICB
use triskel      v4     SICB
use trit1tr      v3r3   SICB
use trivert      v5r1   SICB
use trielec      v5r1   SICB

use dstcheck     v1     SICB
#
#===== build Brunel =========================
application Brunel $(GAUDICONFROOT)/src/GaudiMain.cpp \
                   ../src/BrunelSicb/*.F ../src/BrunelSicb/*.cpp

# ========================= set macros ============================

macro Brunel_linkopts    "$(application_linkopts)"

macro_append Brunel_linkopts " "\
                Linux        " -g -Wl,--start-group "\
                Linuxdbx     " -g -Wl,--start-group "
