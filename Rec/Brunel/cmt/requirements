package Brunel
version v30r5

branches doc cmt job options

#-- CMT and GaudiPolicy
use GaudiPolicy v5r24

#-- External libraries now taken from LCG, version defined by GaudiEnv
use RELAX v* LCG_Interfaces          -no_auto_imports

#-- Gaudi libraries (from GAUDI_v18r5)
use GaudiKernel		v20r7
use GaudiSvc 		v14r8        -no_auto_imports
use GaudiAlg 		v9r6         -no_auto_imports
use GaudiAud 	        v7r1         -no_auto_imports
use GaudiGSL		v6r4         -no_auto_imports
use GaudiPoolDb	        v2r4         -no_auto_imports
use GaudiObjDesc 	v9r6         -no_auto_imports
use RootHistCnv         v9r10         -no_auto_imports

#-- Database
use XmlDDDB             v30r8   Det  -no_auto_imports
use XmlConditions       v1r8    Det  -no_auto_imports
use FieldMap		v4r7         -no_auto_imports
use ParamFiles          v4r3         -no_auto_imports
#use BrunelDQ           v1r0    DQ   -no_auto_imports

#-- LHCb libraries (from LHCB_v21r2)
use LHCb                v21r2        -no_auto_imports

#-- Lbcom packages (from LBCOM_v5r2)
use LbcomSys            v5r2         -no_auto_imports

#-- Rec packages (from REC_v3r5)
use RecSys              v3r5         -no_auto_imports

#
#===== build Brunel =========================
application Brunel $(GAUDICONFROOT)/src/GaudiMain.cpp
# ========================= set macros ============================

macro Brunel_linkopts    "$(application_linkopts)"

apply_pattern application_path

# Set the default path for Brunel options.
set BRUNELOPTS ${BRUNELROOT}/options
