package Brunel
version v30r1

branches doc cmt job options

#-- CMT and GaudiPolicy
use GaudiPolicy v5r23

#-- External libraries now taken from LCG, version defined by GaudiEnv
use RELAX v* LCG_Interfaces          -no_auto_imports

#-- Gaudi libraries (from GAUDI_v18r3)
use GaudiKernel		v20r5
use GaudiSvc 		v14r7        -no_auto_imports
use GaudiAlg 		v9r5         -no_auto_imports
use GaudiAud 	        v7r0         -no_auto_imports
use GaudiGSL		v6r4         -no_auto_imports
use GaudiPoolDb		v2r3         -no_auto_imports
use GaudiObjDesc 	v9r4         -no_auto_imports
use RootHistCnv         v9r9         -no_auto_imports

#-- Database
use XmlDDDB             v30r3   Det  -no_auto_imports
use XmlConditions       v1r6    Det  -no_auto_imports
use FieldMap		v4r7         -no_auto_imports
use ParamFiles          v4r1         -no_auto_imports
#use BrunelDQ           v1r0    DQ   -no_auto_imports

#-- LHCb libraries (from LHCB_v20r2)
use LHCb	        v20r2        -no_auto_imports

#-- Lbcom packages (from LBCOM_v4r2)
use LbcomSys            v4r2         -no_auto_imports

#-- Rec packages (from REC_v3r1)
use RecSys              v3r1         -no_auto_imports

#
#===== build Brunel =========================
application Brunel $(GAUDICONFROOT)/src/GaudiMain.cpp
# ========================= set macros ============================

macro Brunel_linkopts    "$(application_linkopts)"

apply_pattern application_path

# Set the default path for Brunel options.
set BRUNELOPTS ${BRUNELROOT}/options
