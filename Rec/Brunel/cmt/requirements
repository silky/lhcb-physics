package Brunel
version v24r1

branches doc cmt job options

#== Set the Brunel version environment variable, read by BrunelInit ==
pattern BrunelVersion path APPVERSION <version>
apply_pattern BrunelVersion

#-- CMT and GaudiPolicy
use GaudiPolicy v5r18

#-- External libraries now taken from LCG, version defined by GaudiEnv

#-- Gaudi libraries (from GAUDI_v15r1)
use GaudiKernel		v16r1
use GaudiSvc 		v12r2
use GaudiAlg 		v8r0
use GaudiGSL		v6r1
use GaudiPoolDb		v1r8
use GaudiObjDesc 	v6r3
use RootHistCnv         v9r3

#-- Database
use XmlDDDB		v22r3	Det
use FieldMap		v4r5
use ParamFiles          v3r8    -no_auto_imports

#-- LHCb libraries (from LHCB_v16r1)
use LHCb	v16r1

#-- BrunelSys v24r1 packages

# Tools
use AsctToLinker        v1r2    Rec

# Calorimeter
use CaloMonitor         v2r2  	Calo
use CaloReco            v2r4	Calo
use CaloPIDs		v2r3	Calo

# Velo
use VeloDAQ		v1r0	Velo

# Inner Tracker
use ITAlgorithms        v14r3	IT
use ITCheckers          v2r3	IT
use STDAQ               v1r3    IT

# Outer Tracker
use OTAlgorithms        v13r4p1	OT
use OTDAQ               v2r0    OT

# Tracking
use TrFitEvent          v4r6    Tr
use TrFitAssociators    v1r1    Tr    
use VeloTrack           v5r2  	Velo
use TrCheck             v2r5	Tr
use LongTrack           v1r12	Tr
use TrFitter            v4r0	Tr
use TrExtrapolator      v2r13	Tr
use TrTools             v2r5p1 	Tr
use Seeding             v2r9	Tr 
use TrMatching          v2r10p1	Tr
use TrCleanEx           v2r10	Tr
use VeloTT              v1r10	Tr
use TrKShort		v1r4	Tr

# Muon
use MuonUtils		v1r0	Muon
use MuonRec             v2r4	Muon
use MuonID              v3r7p1	Muon
use MuonDAQ             v1r1    Muon

# Rich
use RichRecSys		v1r12	Rich
use RichRecQC		v1r9	Rich

#
#===== build Brunel =========================
application Brunel $(GAUDICONFROOT)/src/GaudiMain.cpp
# ========================= set macros ============================

macro Brunel_linkopts    "$(application_linkopts)"

apply_pattern application_path

# Set the default path for Brunel options.
set BRUNELOPTS ${BRUNELROOT}/options
