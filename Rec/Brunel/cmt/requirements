package Brunel
version v17r2

branches doc cmt job options

#-- CMT and GaudiPolicy
use GaudiPolicy v5r9

#-- External libraries (as defined in GAUDI_v11r4)
use ExternalLibs	v4r0p1
use AIDA		v3r22p0
use CLHEP		v2r1800p0
use HTL			v2r1321p0
use NAGC		v2r50p0		
use XERCES		v2r160p1
use CERNLIB 		v2r2002p0
use ROOT 		v2r30309p1

#-- Gaudi libraries (from GAUDI_v11r4)
use GaudiKernel		v13r2
use GaudiSvc 		v10r1p2
use GaudiAlg 		v6r3p1
use GaudiTools 		v6r1
use GaudiAud 		v6r1
use GaudiNagC 		v7r2
use GaudiDb 		v8r3p1
use GaudiRootDb 	v9r1p3
use GaudiIntrospection 	v4r4p1
use GaudiObjDesc 	v4r5p1
use HbookCnv 		v13r2p1

#-- Database
use XmlDDDB	v15r1	Det

#-- LHCb libraries (from LHCB_v11r8)
use LHCb	v11r8

#-> SICB basic libraries (from LHCB_v11r8)
use SICBSys	v1r2	SICB

#-- BrunelSys v17r2 packages

# Brunel utilities
use BrunelKernel        v5r3	Rec
use BrunelSicb          v4r0    Rec
use BrunelAlgs          v1r8    Rec
use KsReco              v1r4    Rec

# L0 trigger
use L0Calo              v6r6    L0
use L0Muon              v6r3    L0
use PuVeto              v5r3    L0
use L0DU                v6r2    L0

# L1 trigger
use L1VeloTrack         v4r0    L1
use L1Decision		v1r6	L1

# Calorimeter
use CaloInterfaces      v2r4  	Calo
use CaloUtils           v4r4  	Calo
use CaloMonitor         v1r3  	Calo
use CaloReco            v1r2p1 	Calo
use CaloDigit           v1r1  	Calo

# Velo
use VeloAlgorithms      v2r6  	Velo

# Inner Tracker
use ITAlgorithms        v12r8 	IT
use ITCheckers          v1r2  	IT

# Outer Tracker
use OTAlgorithms        v12r3 	OT

# Tracking
use VeloTrack           v4r5  	Velo
use TrCheck             v1r3  	Tr
use LongTrack           v1r5  	Tr
use TrFitter            v3r5  	Tr
use TrExtrapolator      v2r5  	Tr
use TrTools             v2r4  	Tr
use Seeding             v2r4  	Tr 
use TrMatching          v2r6  	Tr
use TrCleanEx           v2r6  	Tr
use TrIntraPR           v2r4  	Tr
use UpstreamPR          v2r7  	Tr
use VeloTT              v1r5  	Tr

# Muon
use MuonAlgs            v3r3    Muon
use MuonRec             v2r3    Muon
use MuonID              v3r5    Muon

# Rich
use RichMonitor         v2r4  	Rich
use RichRecAlgs		v1r4  	Rich
use RichRecTools	v1r4  	Rich
use RichRecKernel	v1r1  	Rich
use RichUtils		v2r1  	Rich
use RichDetTools	v1r3  	Rich
use RichRecEvent        v1r3  	Rich
use RichRecInterfaces	v2r0  	Rich

# SICBDST packages
use recevt              v3r5  	SICB
use recrich             v7r3  	SICB

#
#===== build Brunel =========================
application Brunel ../src/BrunelMain.cpp \
                   $(BRUNELSICBROOT)/src/Objs/*.F
# ========================= set macros ============================

macro Brunel_linkopts    "$(application_linkopts)"

macro_append Brunel_linkopts " "\
                Linux        " -g -Wl,--start-group "\
                Linuxdbx     " -g -Wl,--start-group "

#== Set the Brunel version = v*10000 + r*100 + p  ==
macro_append fflags " -DBrunelVersion=170200 " \
           VisualC  " /DBrunelVersion=170200 "

apply_pattern application_path

# Set the default paths for Brunel options and SICBDST data cards.
set BRUNELOPTS ${BRUNELROOT}/options
set SICBCARDS  ${BRUNELOPTS}/Brunel.cards

