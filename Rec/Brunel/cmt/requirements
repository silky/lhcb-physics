package Brunel
version v27r4

branches doc cmt job options

#-- CMT and GaudiPolicy
use GaudiPolicy v5r20

#-- External libraries now taken from LCG, version defined by GaudiEnv

#-- Gaudi libraries (from GAUDI_v16r5)
use GaudiKernel		v19r3
use GaudiSvc 		v14r0
use GaudiAlg 		v8r9
use GaudiGSL		v6r2
use GaudiPoolDb		v1r14
use GaudiObjDesc 	v7r4
use RootHistCnv         v9r4

#-- Database
use XmlDDDB		v26r1	Det
use FieldMap		v4r5
use ParamFiles          v3r11   -no_auto_imports
use BrunelDQ		v1r0	DQ

#-- LHCb libraries (from LHCB_v18r8)
use LHCb	v18r8

#-- Lbcom packages (from LBCOM_v2r4)
use LbcomSys    v2r4

#-- Rec packages (from REC_v1r4)
use RecSys      v1r4

#
#===== build Brunel =========================
application Brunel $(GAUDICONFROOT)/src/GaudiMain.cpp
# ========================= set macros ============================

macro Brunel_linkopts    "$(application_linkopts)"

apply_pattern application_path

# Set the default path for Brunel options.
set BRUNELOPTS ${BRUNELROOT}/options
