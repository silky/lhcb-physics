package Brunel
version v23r4

branches doc cmt job options

#== Set the Brunel version environment variable, read by BrunelInit ==
pattern BrunelVersion path_append BRUNELVERS <version>
apply_pattern BrunelVersion

#-- CMT and GaudiPolicy
use GaudiPolicy v5r14

#-- External libraries (as defined in GAUDI_v14r3)
use ExternalLibs	v4r4
use AIDA		v3r300
use CLHEP		v2r1810p0
use GSL			v2r14p0
use XERCES		v2r230p0
use CERNLIB 		v2r2002p0
use ROOT 		v2r31002p0
use PI			v1r112
use PCRE		v1r44
use UUID		v1r32
use SEAL		v1r133p1
use POOL		v1r150p1

#-- Gaudi libraries (from GAUDI_v14r3)
use GaudiKernel		v15r2
use GaudiSvc 		v11r4
use GaudiAlg 		v7r1
use GaudiAud 		v6r4
use GaudiGSL		v5r1
use GaudiDb 		v9r2
use GaudiRootDb 	v9r4
use GaudiPoolDb		v1r5
use GaudiObjDesc 	v6r2p1
use RootHistCnv         v9r1

# Temporarily from LHCb v15r5, bug fixes needed by Rich
use GaudiTools          v8r1

#-- Database
use XmlDDDB		v22r0	Det
use FieldMap		v4r5
use ParamFiles          v3r4    -no_auto_imports

#-- LHCb libraries (from LHCB_v15r5)
use LHCb	v15r5

#-- BrunelSys v23r4 packages

# Tools
use LHCbTools		v1r0	Kernel
use AsctToLinker        v1r1    Rec

# Brunel utilities
use BrunelAlgs          v3r4	Rec

# Calorimeter
use CaloMonitor         v2r1  	Calo
use CaloReco            v2r1	Calo
use CaloPIDs		v2r1	Calo

# Velo
use VeloDAQ		v1r0	Velo

# Inner Tracker
use ITAlgorithms        v14r1	IT
use ITCheckers          v2r1	IT
use STDAQ               v1r0    IT

# Outer Tracker
use OTAlgorithms        v13r4	OT
use OTDAQ               v1r1    OT

# Tracking
use TrFitEvent          v4r4    Tr
use TrFitAssociators    v1r1    Tr    
use VeloTrack           v5r1  	Velo
use TrCheck             v2r4	Tr
use LongTrack           v1r10	Tr
use TrFitter            v3r7p1	Tr
use TrExtrapolator      v2r10	Tr
use TrTools             v2r5 	Tr
use Seeding             v2r8	Tr 
use TrMatching          v2r9	Tr
use TrCleanEx           v2r9	Tr
use VeloTT              v1r8	Tr
use TrKShort		v1r2	Tr

# Muon
use MuonUtils		v1r0	Muon
use MuonRec             v2r4	Muon
use MuonID              v3r7p1	Muon
use MuonDAQ             v1r0    Muon

# Rich
use RichUtils		v3r8  	Rich
use RichDetTools	v4r0	Rich
use RichRecSys		v1r8	Rich
use RichRecQC		v1r6	Rich
use RichMCTools		v1r1	Rich

#
#===== build Brunel =========================
application Brunel $(GAUDICONFROOT)/src/GaudiMain.cpp
# ========================= set macros ============================

macro Brunel_linkopts    "$(application_linkopts)"

apply_pattern application_path

# Set the default path for Brunel options.
set BRUNELOPTS ${BRUNELROOT}/options
