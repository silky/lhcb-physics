package Brunel
version v26r0

branches doc cmt job options

#== Set the Brunel version environment variable, read by BrunelInit ==
pattern BrunelVersion path APPVERSION <version>
apply_pattern BrunelVersion

#-- CMT and GaudiPolicy
use GaudiPolicy v5r20

#-- External libraries now taken from LCG, version defined by GaudiEnv

#-- Gaudi libraries (from GAUDI_v16r1)
use GaudiKernel		v18r2
use GaudiSvc 		v13r0
use GaudiAlg 		v8r5
use GaudiGSL		v6r2
use GaudiPoolDb		v1r12
use GaudiObjDesc 	v7r3
use RootHistCnv         v9r4

#-- Database
use XmlDDDB		v23r2	Det
use FieldMap		v4r5
use ParamFiles          v3r10   -no_auto_imports
use BrunelDQ		v1r0	DQ

#-- LHCb libraries (from LHCB_v18r0)
use LHCb	v18r0

#-- Lbcom packages (from LBCOM_v1r0)
use LbcomSys    v1r0

#-- BrunelSys v26r0 packages

# Calorimeter
use CaloMoniDst         v1r0	Calo

# Inner Tracker
use ITAlgorithms        v14r4	IT
use ITCheckers          v2r4p1	IT

# Tracking
use TrFitEvent          v4r9    Tr
use TrFitAssociators    v1r3    Tr    
use TrCheck             v2r8	Tr
use LongTrack           v1r14	Tr
use TrFitter            v4r0	Tr
use TrTools             v2r6 	Tr
use Seeding             v2r10	Tr 
use TrMatching          v2r10p1	Tr
use TrCleanEx           v2r11	Tr
use VeloTT              v1r11	Tr
use TrKShort		v1r5	Tr

# Trg tracking in Velo
use TrgTools            v7r1    Trg
use TrgVelo             v7r1    Trg
use TrgBrunel           v1r2    Trg

# Muon
use MuonUtils		v1r0	Muon
use MuonRec             v2r4	Muon
use MuonID              v3r7p1	Muon

# Rich
use RichRecSys		v1r15	Rich

#
#===== build Brunel =========================
application Brunel $(GAUDICONFROOT)/src/GaudiMain.cpp
# ========================= set macros ============================

macro Brunel_linkopts    "$(application_linkopts)"

apply_pattern application_path

# Set the default path for Brunel options.
set BRUNELOPTS ${BRUNELROOT}/options
