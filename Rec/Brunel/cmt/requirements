package Brunel
version v16r4

branches doc cmt job options

#-- Gaudi libraries (version v12r3 fixed by LHCbEnv)
use GaudiSys	v*
use HbookCnv	v*
use GaudiRootDb v*

#-- LHCb libraries (version v11r4 fixed by BrunelEnv)
use LHCb	v*
use SICBSys	v*	SICB

#-- Database
use XmlDDDB	v14r3	Det

#-- BrunelSys v16r4 packages

# Brunel utilities
use BrunelKernel        v5r3	Rec
use BrunelSicb          v4r0    Rec
use BrunelAlgs          v1r7    Rec
use KsReco              v1r3    Rec

# L0 trigger
use L0Calo              v6r4    L0
use L0Muon              v6r3    L0
use PuVeto              v5r2    L0
use L0DU                v6r2    L0

# L1 trigger
use L1VeloTrack         v3r5    L1
use L1Decision		v1r4	L1

# Calorimeter
use CaloInterfaces      v2r4  	Calo
use CaloUtils           v4r4  	Calo
use CaloMonitor         v1r3  	Calo
use CaloReco            v1r2  	Calo
use CaloDigit           v1r1  	Calo

# Velo
use VeloAlgorithms      v2r5  	Velo

# Inner Tracker
use ITAlgorithms        v12r6 	IT
use ITCheckers          v1r2  	IT

# Outer Tracker
use OTAlgorithms        v12r2 	OT

# Tracking
use VeloTrack           v4r4  	Velo
use TrCheck             v1r2  	Tr
use LongTrack           v1r4  	Tr
use TrFitter            v3r5  	Tr
use TrExtrapolator      v2r4  	Tr
use TrTools             v2r2  	Tr
use Seeding             v2r4  	Tr 
use TrMatching          v2r5  	Tr
use TrCleanEx           v2r3  	Tr
use TrIntraPR           v2r2  	Tr
use UpstreamPR          v2r5  	Tr
use VeloTT              v1r4  	Tr

# Muon
use MuonAlgs            v3r1    Muon
use MuonRec             v2r3    Muon
use MuonID              v3r4    Muon

# Rich
use RichMonitor         v2r3  	Rich
use RichRecAlgs		v1r3  	Rich
use RichRecTools	v1r3  	Rich
use RichRecKernel	v1r1  	Rich
use RichUtils		v2r1  	Rich
use RichDetTools	v1r2  	Rich
use RichRecEvent        v1r3  	Rich
use RichRecInterfaces	v1r1  	Rich

# SICBDST packages
use recevt              v3r5  	SICB
use recrich             v7r3  	SICB

#
#===== build Brunel =========================
application Brunel ../src/BrunelMain.cpp \
                   $(BRUNELSICBROOT)/src/Objs/*.F
# ========================= set macros ============================

macro Brunel_linkopts    "$(application_linkopts)"

macro_append Brunel_linkopts " "\
                Linux        " -g -Wl,--start-group "\
                Linuxdbx     " -g -Wl,--start-group "

#== Set the Brunel version = v*10000 + r*100 + p  ==
macro_append fflags " -DBrunelVersion=160400 " \
           VisualC  " /DBrunelVersion=160400 "

apply_pattern application_path

# Set the default paths for Brunel options and SICBDST data cards.
set BRUNELOPTS ${BRUNELROOT}/options
set SICBCARDS  ${BRUNELOPTS}/Brunel.cards

