package Brunel
version v23r0

branches doc cmt job options

#== Set the Brunel version environment variable, read by BrunelInit ==
pattern BrunelVersion path_append BRUNELVERS <version>
apply_pattern BrunelVersion

#-- CMT and GaudiPolicy
use GaudiPolicy v5r14

#-- External libraries (as defined in GAUDI_v14r0)
use ExternalLibs	v4r4
use AIDA		v3r300
use CLHEP		v2r1810p0
use GSL			v2r14p0
use XERCES		v2r230p0
use CERNLIB 		v2r2002p0
use ROOT 		v2r31002p0
use PI			v1r112
use PCRE		v1r44
use UUID		v1r32
use SEAL		v1r133p0
use POOL		v1r150p0

#-- Gaudi libraries (from GAUDI_v14r0)
use GaudiKernel		v15r0
use GaudiSvc 		v11r1
use GaudiAlg 		v6r5
use GaudiAud 		v6r4
use GaudiGSL		v5r0
use GaudiDb 		v9r1
use GaudiRootDb 	v9r4
use GaudiPoolDb		v1r2
use GaudiObjDesc 	v6r2p1
use RootHistCnv         v9r1

#-- Database
use XmlDDDB		v20r1	Det
use ParamFiles          v2r1    $(LHCb_release_area)/PARAM -no_auto_imports

#-- LHCb libraries (from LHCB_v15r0)
use LHCb	v15r0

#-- BrunelSys v23r0 packages

# Phys utilities
use MCTools		v1r1p1	Phys

# Brunel utilities
use BrunelAlgs          v3r3	Rec

# Calorimeter
use CaloInterfaces      v3r1  	Calo
use CaloUtils           v4r6  	Calo
use CaloMonitor         v1r6  	Calo
use CaloReco            v1r8	Calo
use CaloPIDs		v1r2	Calo

# Velo
use VeloAlgorithms      v2r9  	Velo

# Inner Tracker
use ITAlgorithms        v13r1	IT
use ITCheckers          v1r4	IT

# Outer Tracker
use OTAlgorithms        v13r4	OT

# Tracking
use VeloTrack           v5r1  	Velo
use TrCheck             v2r2	Tr
use LongTrack           v1r9	Tr
use TrFitter            v3r7	Tr
use TrExtrapolator      v2r10	Tr
use TrTools             v2r5 	Tr
use Seeding             v2r6	Tr 
use TrMatching          v2r8	Tr
use TrCleanEx           v2r7p2	Tr
use TrIntraPR           v2r8	Tr
use UpstreamPR          v2r9  	Tr
use VeloTT              v1r6p1	Tr

# Muon
use MuonUtils		v1r0	Muon
use MuonRec             v2r4	Muon
use MuonID              v3r7	Muon

# Rich
use RichUtils		v3r6  	Rich
use RichDetTools	v3r5	Rich
use RichRecSys		v1r6	Rich
use RichRecQC		v1r4	Rich
use RichRecMCTools	v1r1	Rich
use RiSicbGeom          v3r8	SICB

#
#===== build Brunel =========================
application Brunel $(GAUDICONFROOT)/src/GaudiMain.cpp
# ========================= set macros ============================

macro Brunel_linkopts    "$(application_linkopts)"

apply_pattern application_path

# Set the default path for Brunel options.
set BRUNELOPTS ${BRUNELROOT}/options
