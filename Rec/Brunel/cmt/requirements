package Brunel
version v28r0

branches doc cmt job options

#-- CMT and GaudiPolicy
use GaudiPolicy v5r21

#-- External libraries now taken from LCG, version defined by GaudiEnv

#-- Gaudi libraries (from GAUDI_v17r1)
use GaudiKernel		v20r1
use GaudiSvc 		v14r2        -no_auto_imports
use GaudiAlg 		v9r1         -no_auto_imports
use GaudiGSL		v6r2         -no_auto_imports
use GaudiPoolDb		v2r1         -no_auto_imports
use GaudiObjDesc 	v8r2         -no_auto_imports
use RootHistCnv         v9r5         -no_auto_imports

#-- Database
use XmlDDDB		v26r2   Det  -no_auto_imports
use FieldMap		v4r5         -no_auto_imports
use ParamFiles          v3r11        -no_auto_imports
use BrunelDQ		v1r0	DQ   -no_auto_imports

#-- LHCb libraries (from LHCB_v19r0)
use LHCb	v19r0                -no_auto_imports

#-- Lbcom packages (from LBCOM_v3r0)
use LbcomSys    v3r0                 -no_auto_imports

#-- Rec packages (from REC_v2r0)
use RecSys      v2r0                 -no_auto_imports

#
#===== build Brunel =========================
application Brunel $(GAUDICONFROOT)/src/GaudiMain.cpp
# ========================= set macros ============================

macro Brunel_linkopts    "$(application_linkopts)"

apply_pattern application_path

# Set the default path for Brunel options.
set BRUNELOPTS ${BRUNELROOT}/options
