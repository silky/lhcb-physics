package Brunel
version v2

branches doc cmt src job options Brunel

ignore_pattern package_stamps

# Set the default paths for Brunel and SICBDST data cards.
set BRUNELOPTS ${BRUNELROOT}/options
set JOBOPTPATH ${BRUNELOPTS}/Brunel.opts
set SICBCARDS  ${BRUNELOPTS}/Brunel.cards

# Next line to force static build to go into LinuxStatic directory
ignore_pattern package_tag

use BrunelKernel  v1* Rec

# Gaudi Configuration options
use GaudiConf v4*

# Gaudi Framework
use GaudiSys v7*
#
# SicB event data persistency
use SicbCnv v12*	SICB
#
use SICBDST v252*	SICB
#
# Calorimeter digitisation
use CaloAlgs    v2* Calo
use CaloSicbCnv v3* SICB

# Detector description database
use DetDesc     v6* Det
use XmlDDDB     v5* Det

# tracking
#use TrAlgorithms v2*	Tr
#use OTAlgorithms v2*	OT
#use ITAlgorithms v2*	IT
#use VSicbCnv v2*	SICB
#
#===== build Brunel =========================
application Brunel $(GAUDICONFROOT)/src/GaudiMain.cpp \
                   ../src/BrunelSicb/*.F ../src/BrunelSicb/*.cpp \
                   ${SICBDSTROOT}/src/sicbvers.F
# ${SICBDSTROOT}/dst/*.F

# ========================= set macros ============================

macro Brunel_linkopts    "${application_linkopts}"
