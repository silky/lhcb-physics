package Brunel
version v25r3

branches doc cmt job options

#== Set the Brunel version environment variable, read by BrunelInit ==
pattern BrunelVersion path APPVERSION <version>
apply_pattern BrunelVersion

#-- CMT and GaudiPolicy
use GaudiPolicy v5r19

#-- External libraries now taken from LCG, version defined by GaudiEnv

#-- Gaudi libraries (from GAUDI_v15r3)
use GaudiKernel		v17r0
use GaudiSvc 		v12r6
use GaudiAlg 		v8r2
use GaudiGSL		v6r1
use GaudiPoolDb		v1r10p1
use GaudiObjDesc 	v7r0
use RootHistCnv         v9r3

#-- Database
use XmlDDDB		v23r1	Det
use FieldMap		v4r5
use ParamFiles          v3r9    -no_auto_imports
use BrunelDQ		v1r0	DQ

#-- LHCb libraries (from LHCB_v17r3)
use LHCb	v17r3

#-- BrunelSys v25r3 packages

# Tools
use AsctToLinker        v1r3    Rec

# Calorimeter
use CaloMoniDst         v1r0	Calo
use CaloReco            v2r7	Calo
use CaloPIDs		v2r4	Calo

# Inner Tracker
use ITAlgorithms        v14r4	IT
use ITCheckers          v2r4	IT

# Outer Tracker
use OTMonitor        	v1r1	OT

# Tracking
use TrFitEvent          v4r8    Tr
use TrFitAssociators    v1r3    Tr    
use TrCheck             v2r7p1	Tr
use LongTrack           v1r13	Tr
use TrFitter            v4r0	Tr
use TrExtrapolator      v2r14	Tr
use TrTools             v2r6 	Tr
use Seeding             v2r10	Tr 
use TrMatching          v2r10p1	Tr
use TrCleanEx           v2r11	Tr
use VeloTT              v1r11	Tr
use TrKShort		v1r5	Tr

# Trg tracking in Velo
use TrgTools            v7r0p1  Trg
use TrgVelo             v7r0p1  Trg
use TrgBrunel           v1r1    Trg

# Muon
use MuonUtils		v1r0	Muon
use MuonRec             v2r4	Muon
use MuonID              v3r7p1	Muon

# Rich
use RichRecSys		v1r14	Rich
use RichRecQC		v1r10	Rich

#
#===== build Brunel =========================
application Brunel $(GAUDICONFROOT)/src/GaudiMain.cpp
# ========================= set macros ============================

macro Brunel_linkopts    "$(application_linkopts)"

apply_pattern application_path

# Set the default path for Brunel options.
set BRUNELOPTS ${BRUNELROOT}/options
