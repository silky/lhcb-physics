package Brunel
version v14r0

branches doc cmt job options

ignore_pattern package_stamps

# Set the default paths for Brunel options and SICBDST data cards.
set BRUNELOPTS ${BRUNELROOT}/options
set SICBCARDS  ${BRUNELOPTS}/Brunel.cards

# Next line to force static build to go into LinuxStatic directory
#ignore_pattern   package_tag

#---CMT and Gaudi policy
use GaudiPolicy  v5r5

# External libraries - Gaudi v10r1
use ExternalLibs   	v3r6
use AIDA           	v2r2
use CLHEP          	v17r10p1
use HTL            	v13r10p1
use NAGC           	v5r0
use XERCES         	v16r0p1
use CERNLIB        	v2001
use ROOT		v2r303p0

#---Gaudi libraries - Gaudi v10r4
use GaudiKernel        v12r3
use GaudiSvc           v8r4
use GaudiAlg           v6r1
use GaudiAud           v6r0
use GaudiNagC          v7r0
use GaudiDb            v8r1
use GaudiRootDb        v9r0
use HbookCnv           v12r0
#use RootHistCnv        v8r0

#---LHCb common libraries
use GaudiConf    v6r3
use BookKeeping  v1r1   Tools
use LHCbKernel   v1r4   Kernel
use Finclude     v13r0  SICB
use Futio        v12r0  SICB

# Detector description
use DetDesc      v10r4  Det
use XmlDDDB      v13r0  Det
use CaloDet       v5r1  Det
use CaloDetXmlCnv v2r0  Det
use ITDet         v1r1  Det
use MuonDet       v4r0  Det
use OTDet         v2r2  Det
use VeloDet       v7r0  Det
use Magnet        v1r1  Det

# Event Model
use EventSys     v12r4  Event

# SicB event data persistency
use SicbCnv      v17r2  SICB
use RiSicbGeom   v2r3   SICB
use CaloSicbCnv  v7r1   SICB
use MuonSicbCnv  v6r4   SICB
use RiSicbCnv    v4r4   SICB
use VSicbCnv     v8r0   SICB

# Brunel utilities
use BrunelKernel v5r1   Rec
use BrunelSicb   v4r0   Rec
use BrunelAlgs   v1r3   Rec

# L0 trigger
use L0Calo              v6r1    L0
use L0Muon              v6r1    L0
use PuVeto              v4r0    L0
use L0DU                v6r1    L0

# L1 trigger
use L1VeloTrack         v2r2    L1

# Calorimeter
use CaloKernel          v2r0    Calo
use CaloInterfaces 	v2r2 	Calo
use CaloUtils      	v4r2 	Calo
use CaloTools      	v4r4 	Calo
use CaloAlgs       	v7r1 	Calo
use CaloMonitor         v1r1    Calo
use CaloAssociators	v2r2	Calo
use CaloRec		v2r3	Calo
use CaloTrackTools	v1r4	Calo

# Velo
use VeloKernel		v1r1	Velo
use VeloAlgorithms	v2r1	Velo
use VeloAssociators	v1r1	Velo

# Inner Tracker
use ITAlgorithms	v12r1  	IT
use ITAssociators	v2r0	IT

# Outer Tracker
use OTAlgorithms  	v11r1  	OT
use OTAssociators  	v2r1  	OT

# Tracking
use TrKernel            v11r0   Tr
use TrFitEvent          v3r0    Tr
use VeloTrack           v4r1    Velo
use TrAssociators       v3r1    Tr
use FwTrack             v4r2    Tr
use LongTrack           v1r0    Tr
use TrFitter            v3r1    Tr
use TrExtrapolator      v2r1    Tr
use TrTools             v2r0    Tr
use Seeding	        v2r1    Tr
use TrMatching          v2r0    Tr
use TrCleanEx           v2r1    Tr
use TrIntraPR		v2r0	Tr
use UpstreamPR		v2r1	Tr

# Muon
use MuonKernel          v2r1    Muon
use MuonTools           v3r0    Muon
use MuonAlgs		v2r2	Muon
use MuonRec     	v2r2	Muon
use MuonID      	v3r1	Muon
use MuonAssociators	v1r0	Muon

# Rich
use RichKernel          v1r2    Rich
use RichMonitor         v1r2    Rich

# SICBDST packages
use Futil        v11r0  SICB
use detdes       v17r0  SICB
use recevt       v3r4   SICB
use recrich      v7r2   SICB

#
#===== build Brunel =========================
application Brunel ../src/BrunelMain.cpp \
                   $(BRUNELSICBROOT)/src/Objs/*.F
# ========================= set macros ============================

macro Brunel_linkopts    "$(application_linkopts)"

macro_append Brunel_linkopts " "\
                Linux        " -g -Wl,--start-group "\
                Linuxdbx     " -g -Wl,--start-group "

#== Set the Brunel version = v*10000 + r*100 + p  ==
macro_append fflags " -DBrunelVersion=140000 " \
           VisualC  " /DBrunelVersion=140000 "

apply_pattern application_path
