//////////////////////////////////////////////////////////////////////////////
///      Job options for Brunel when using $LHCBDBASE version v254r1       ///
///    To be used also for data produced with dbases v253r1 and v254r0     ///
///      ------- LHCb light detector for LHCb-light production -----       ///
//////////////////////////////////////////////////////////////////////////////
#pragma print off
#include "$SICBCNVROOT/options/Brunel.opts" // Comment to switch off spillover
#include "$BRUNELOPTS/Brunel.opts"          // Generic options for all jobs
#include "$BRUNELOPTS/BrunelMoniProd.opts"  // Comment to switch on all histos
#include "$BRUNELOPTS/BrunelDst.opts"       // Comment to switch off DST output

//---------------------------------------------------------------------------
// Database specific options
//---------------------------------------------------------------------------
DetectorDataSvc.DetDbLocation = "$XMLDDDBROOT/DDDB/v252r0.xml";
MagneticFieldSvc.FieldMapFile = "$LHCBDBASE/cdf/field043.cdf";
#include "$LONGTRACKROOT/options/BrunelField043.opts"
#pragma print on
//---------------------------------------------------------------------------
// Add here any job specific options, to over-ride previously defined options
//---------------------------------------------------------------------------
//ApplicationMgr.DLLs = {"NONE"};             // Uncomment if static link

//---------------------------------------------------------------------------
// Finally, define input and output files, first event, number of events
//---------------------------------------------------------------------------
EventSelector.Input = {
  "FILE='/castor/cern.ch/lhcb/prod/L2106230'" // RAWH2 evtype 412100
};
//EventSelector.FirstEvent = 7; // Skip 6 events
SpillOverSelector.Input = {
  "FILE='/castor/cern.ch/lhcb/prod/L2106232'", // RAWH2 evtype 61
  "FILE='/castor/cern.ch/lhcb/prod/L2106217'"  // RAWH2 evtype 61
 }; // evtype 61 RAWH2
//SpillOverSelector.FirstEvent = 8; // Skip corresponding spillover events
BrunelDstWriter.Output = "DATAFILE='v254r1.dst' TYP='ROOT' OPT='NEW'";
HistogramPersistencySvc.OutputFile = "v254r1.hbook";  // Monitoring histos
ApplicationMgr.EvtMax = 10;
