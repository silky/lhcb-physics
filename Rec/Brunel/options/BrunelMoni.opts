// Modify this file to change the default Brunel monitoring. 
// Provide a dummy file to switch off Brunel monitoring. 
//--------------------------------------------------------------
ApplicationMgr.TopAlg += { "BrunelPhase/BrunelMoni" };

//--------------------------------------------------------------
// Choice of persistency technology. Default is Hbook, move comments for ROOT
// Hbook persistency (use HBookCnv v* in requirements).
#include "$STDOPTS/Hbook.opts"
// ROOT persistency (use RootHistCnv v* in requirements).
//#include "$STDOPTS/RootHist.opts"

#pragma print on
//--------------------------------------------------------------
// Detectors to monitor
//--------------------------------------------------------------
BrunelMoni.DetectorList = { "IT", "OT", "Tr", "TRACK", "CALO", "TRIGGER" };

//--------------------------------------------------------------
// Monitoring algorithms
//--------------------------------------------------------------

// IT digitisation
BrunelMoniITSeq.Members = 
  { "MCITDepositChecker", "MCITDigitChecker", "ITDigitChecker" };

// IT reconstruction
BrunelMoniITSeq.Members += { "ITClusterChecker" };


//BrunelMoniOTSeq.Members   = { "OTDigitChecker" };
//BrunelMoniTrSeq.Members   = { "TrMonitor" };
#pragma print off

//--------------------------------------------------------------
// No Fwtrack monitoring by default (produces ntuple). Uncomment to switch on
//--------------------------------------------------------------
// ApplicationMgr.ExtSvc += { "NTupleSvc" };
// NTupleSvc.Output={"TRACK DATAFILE='Track.hbook' TYP='HBOOK' OPT='NEW'"};
// BrunelMoniTRACKSeq.Members = { "FwtAnalyse" };

//--------------------------------------------------------------
// Set up some profiling. Enable/Disable setting lines below to true/false
//--------------------------------------------------------------
AuditorSvc.Auditors  = { "NameAuditor", "ChronoAuditor", "MemoryAuditor" };
NameAuditor.Enable   = false;
ChronoAuditor.Enable = true;
MemoryAuditor.Enable = false;
