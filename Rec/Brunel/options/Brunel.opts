//TrMonitor_xtrp1_shortFieldExtrapolator.OutputLevel = 4;
//TrMonitor_xtrp1.OutputLevel = 4;
MessageSvc.Format = "% F%80W%S%7W%R%T %0W%M";

//--------------------------------------------------------------
// Enable/Disable some monitoring by setting lines below to true/false
//--------------------------------------------------------------
NameAuditor.Enable   = false;
ChronoAuditor.Enable = true;
MemoryAuditor.Enable = false;

