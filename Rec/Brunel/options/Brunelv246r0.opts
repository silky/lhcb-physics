//--------------------------------------------------------------
// Job options for Brunel when using $LHCBDBASE version v246r0
// ------ "Realistic LHCb light, IT only TT1, 2-gap M1" detector -----

// --- Define input data. Spillover first (if required), then signal ---
#include "$SICBCNVROOT/options/Brunel.opts"  // Uncomment for spillover
SpillOverSelector.Input = {"JOBID='96842'"}; // evtype 61 RAWH2 for spillover
EventSelector.Input = {"JOBID='96324'"}; // evtype 411300 RAWH2 signal

//--------------------------------------------------------------
#include "$BRUNELOPTS/Brunel.opts"  // Generic options for all jobs
//--------------------------------------------------------------

// Define outputs
HistogramPersistencySvc.OutputFile = "brunel_v246r0.hbook";  // Monitoring histos
#include "$BRUNELOPTS/BrunelDst.opts" // Enable DST output and define DST content
BrunelDstWriter.Output = "DATAFILE='dst_v246.root' TYP='ROOT' OPT='NEW'";

//--------------------------------------------------------------
// Database specific options
//--------------------------------------------------------------
DetectorDataSvc.DetDbLocation = "$XMLDDDBROOT/DDDB/v246r0.xml";
#pragma print off
#include "$FWTRACKROOT/options/Brunelv246r0.opts" // Forward tracking
#pragma print on
MagneticFieldSvc.FieldMapFile = "$LHCBDBASE/cdf/field044.cdf";

//--------------------------------------------------------------
// Add here your specific options. These over-ride previously defined options
//EventSelector.FirstEvent = 6;
#pragma print on
ApplicationMgr.EvtMax = 10;
