package RichReadout
version v2r0

# ================ structure =================================================
branches cmt doc src Event xml
include_path none

# ================ environment ===============================================
set RICHREADOUTOPTS $(RICHREADOUTROOT)/options

# ================ dependencies ==============================================
use MCEvent      v*      Event
use RichKernel   v*      Rich
use DAQEvent     v*      Event

#============================================================================
# Build GOD objects
#============================================================================
document  obj2doth  RichReadout_EventObj2Doth      ../xml/*.xml

# ================ component library =========================================
library RichReadout ../src/component/*.cpp  -import=AIDA

apply_pattern component_library library=RichReadout

private
use GaudiObjDesc v* 
include_dirs $(RICHREADOUTROOT)
