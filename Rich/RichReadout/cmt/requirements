package RichReadout
version v1r13

# ================ structure =================================================
branches cmt doc src Event xml
#include_path none

# ================ environment ===============================================
set RICHREADOUTOPTS $(RICHREADOUTROOT)/options

# ================ dependencies ==============================================
use RichEvent    v*      Event
use DAQEvent     v*      Event

#============================================================================
# Build GOD objects
#============================================================================
document  obj2doth  RichReadout_EventObj2Doth      ../xml/*.xml

# ================ component library =========================================
library RichReadout ../src/event/*.cpp ../src/component/*.cpp  -import=AIDA

apply_pattern component_library library=RichReadout

private
use GaudiObjDesc v* 
include_dirs $(RICHREADOUTROOT)
