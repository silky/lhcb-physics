#============================================================================
# Created    : 2013-04-16
# Maintainer : Bartek RACHWAL, bartlomiej.rachwal@ifj.edu.pl
#
#============================================================================
package       LbPowheg
version       v1r0

#============================================================================
# Structure, i.e. directories to process. 
#============================================================================
branches      LbPowheg doc cmt src options
include_dirs  $(LBPOWHEGROOT)

# =============== environment =================================================
# Treat symbol as an environment variable. 
# The symbol will be visible from the shell after executing SetupProject:
set               LBPOWHEGOPTS $(LBPOWHEGROOT)/options 
set               POWHEGEXE $(powheg_execs)


#============================================================================
# Used packages. Specify the version, * at the end specifies 'any revision'
#============================================================================
use           Generators        v*          Gen
use           Boost             v*          LCG_Interfaces -no_auto_imports
use           powheg		   v*		   LCG_GeneratorsInterfaces
use           LbPythia     	   v* 	   Gen

#============================================================================
# Linker and Component library building rule
#============================================================================
library       LbPowhegLib       Lib/*.cpp Lib/*.F
library       LbPowheg          component/*.cpp

#============================================================================
# define component and linker library options (the order is essential!)
#============================================================================
apply_pattern component_library library=LbPowheg 
apply_pattern linker_library    library=LbPowhegLib 
apply_pattern library_stamps    library=LbPowhegLib 

# do not build on windows
#============================================================================
apply_pattern disable_package_on platform=target-winxp

private
macro_append Boost_linkopts " $(Boost_linkopts_filesystem) $(Boost_linkopts_system) "
end_private
