#============================================================================
# Created    : 2012-11-20
# Maintainer : Philip Ilten
#============================================================================
package       LbPowheg
version       v0r0

# Structure, i.e. directories to process. 
#============================================================================
branches      LbPowheg doc cmt src

# Its own include (not exported to project)
#============================================================================
include_dirs  $(LBPOWHEGROOT) $(LBPOWHEGROOT)/LbPowheg

# Used packages.
#============================================================================
use           Generators       v*    Gen
use           pythia8          v*    LCG_GeneratorsInterfaces

# Component library building rule
#============================================================================
library	  LbPowheg_dijet  Lib/dijet/*.f  Lib/dijet/*.F  Lib/dijet/*.cxx
library	  LbPowheg_gg_h   Lib/gg_h/*.f   Lib/gg_h/*.F   Lib/gg_h/*.cxx
library	  LbPowheg_hvq 	  Lib/hvq/*.f    Lib/hvq/*.F    Lib/hvq/*.cxx
library	  LbPowheg_st_sch Lib/st_sch/*.f Lib/st_sch/*.F Lib/st_sch/*.cxx
library	  LbPowheg_st_tch Lib/st_tch/*.f Lib/st_tch/*.F Lib/st_tch/*.cxx
library	  LbPowheg_vbf_h  Lib/vbf_h/*.f  Lib/vbf_h/*.F  Lib/vbf_h/*.cxx
library	  LbPowheg_vbf_wp_wp Lib/vbf_wp_wp/*.f Lib/vbf_wp_wp/*.F Lib/vbf_wp_wp/*.cxx
library	  LbPowheg_w      Lib/w/*.f      Lib/w/*.F      Lib/w/*.cxx
library	  LbPowheg_wbb    Lib/wbb/*.f    Lib/wbb/*.F    Lib/wbb/*.cxx
library	  LbPowheg_wj     Lib/wj/*.f     Lib/wj/*.F     Lib/wj/*.cxx
library	  LbPowheg_ww     Lib/ww/*.f     Lib/ww/*.F     Lib/ww/*.cxx
library	  LbPowheg_wz     Lib/wz/*.f     Lib/wz/*.F     Lib/wz/*.cxx
library	  LbPowheg_z      Lib/z/*.f      Lib/z/*.F      Lib/z/*.cxx
library	  LbPowheg_zj     Lib/zj/*.f     Lib/zj/*.F     Lib/zj/*.cxx
library	  LbPowheg_zz     Lib/zz/*.f     Lib/zz/*.F     Lib/zz/*.cxx
library   LbPowhegLib     Lib/*.cpp Lib/*.cxx
library   LbPowheg        component/*.cpp

## define component and linker library link options
##============================================================================
#apply_pattern component_library library=LbPowheg 
#apply_pattern linker_library    library=LbPowhegLib 
#apply_pattern library_stamps    library=LbPowhegLib

# fortran compiler setup
#============================================================================
 macro_append fflags "-fno-automatic -fPIC -ffixed-line-length-none -fno-second-underscore -O2"

## define environment variable to get xmldoc repository from GENSER distrib
##============================================================================
#set PYTHIA8XML $(pythia8_home)/xmldoc
#
## do not build on windows
##============================================================================
#apply_pattern disable_package_on platform=target-winxp
