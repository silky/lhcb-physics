# $Id: requirements,v 1.23 2006-07-04 10:12:03 gcorti Exp $ 
# =============================================================================
package       Generators
version       v6r0

# =========== structure =======================================================
branches      Generators doc cmt src

# =========== own includes ====================================================
include_dirs  $(GENERATORSROOT)

# =========== dependencies ====================================================
use           SEAL              v*                LCG_Interfaces
use           GaudiAlg          v*
use           GenEvent          v*                Event
use           EvtGen            v*                Gen
use           LoKiGen           v*                Phys 

# =========== constituents ====================================================
library       GeneratorsLib  Lib/*.cpp Lib/*.F
library       Generators     component/*.cpp

# =========== standard patterns (the order is essential!) =====================
apply_pattern component_library library=Generators 
apply_pattern linker_library    library=GeneratorsLib 
apply_pattern library_stamps    library=GeneratorsLib 

# =========== link with HepMCfio from HepMC ==================================
macro_prepend HepMC_linkopts "-L$(HepMC_home)/lib -lHepMCfio "
