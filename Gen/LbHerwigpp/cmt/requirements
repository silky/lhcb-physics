#============================================================================
# Created    : 2010-03-25
# Maintainer : Philip Ilten
#============================================================================
package       LbHerwigpp
version       v1r0

# Structure, i.e. directories to process.
#============================================================================
branches      LbHerwigpp doc cmt src

# Local include directory (not exported to project).
#============================================================================
include_dirs  $(LBHERWIGPPROOT)

# Used packages.
#============================================================================
use           herwig++         v*    LCG_GeneratorsInterfaces
use           thepeg           v*    LCG_GeneratorsInterfaces
use           Generators       v*    Gen


# Component library building rules.
#============================================================================
library       LbHerwigpp           component/*.cpp
library	      LbHerwigppRandom     Lib/*.cpp

# Define component and linker library link options.
#============================================================================
apply_pattern component_library library=LbHerwigpp

# Reset from LCG interface packages
# reset of include and library path until properly set in
# LCG_GeneratorsInterface packages
private
include_dirs $(thepeg_home)/include
end_private
path_prepend LD_LIBRARY_PATH $(thepeg_home)/lib/ThePEG

private
macro herwig++_linkopts ""
end_private
path_prepend LD_LIBRARY_PATH "$(herwig++_home)/lib/Herwig++"
set HERWIGPPROOT "$(herwig++_home)"

