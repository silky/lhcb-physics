# $Id: requirements,v 1.6 2007-03-09 12:47:31 gcorti Exp $ 
# =============================================================================
package       LbHijing
version       v2r0

# =========== structure =======================================================
branches      LbHijing doc cmt src

# =========== own includes ====================================================
include_dirs  $(LBHIJINGROOT)

# =========== dependencies ====================================================
use           Generators        v*          Gen

# =========== constituents ====================================================
library       LbHijingLib       Lib/*.cpp Lib/*.F
library       LbHijing          component/*.cpp

# =========== standard patterns (the order is essential!) =====================
apply_pattern component_library library=LbHijing 
apply_pattern linker_library    library=LbHijingLib 

macro LbHijing_fflags " -fno-second-underscore " \
      WIN32 ""
 
macro hijing_native_version "1_383bs.2"
include_dirs $(GENSER_path)/include/hijing/$(hijing_native_version)/include 

macro hijing_linkopts "-L$(GENSER_home) -lhijing$(hijing_native_version) -ldummy_hijing$(hijing_native_version)"\
        WIN32         "/libpath:$(GENSER_home) hijing$(hijing_native_version) dummy_hijing$(hijing_native_version)"

macro_append GENSER_linkopts " $(hijing_linkopts)"

