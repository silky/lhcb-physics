/** @file 
 * 
 *  Options for a Gauss with simulation phase where generator event is read
 *  from a file.
 *  This file defines, sequences and configures the algorithms to be executed
 *
 *  @author G.Corti
 *  @date   2006-05-30
 *  @date   2008-06-10
 */

#include "$GAUSSOPTS/Common.opts"    // Necessary for any Gauss executable

//---------------------------------------------------------------------------
// Switch off generator phases
//---------------------------------------------------------------------------
Gauss.Members         -= { "GaudiSequencer/Generator"  };

//---------------------------------------------------------------------------
// Must read events (overwrite property of no events input set for
// "normal" Gauss jobs)
//---------------------------------------------------------------------------
ApplicationMgr.EvtSel = "";
EventDataSvc.RootCLID = 1;

//---------------------------------------------------------------------------
// Input file
//---------------------------------------------------------------------------
EventSelector.Input   = {
  "DATAFILE='PFN:$GAUSSROOT/job/Gauss.sim' TYP='POOL_ROOTTREE' OPT='READ'"
};
  
//---------------------------------------------------------------------------
// Output files. 
//---------------------------------------------------------------------------
GaussTape.Output = "DATAFILE='PFN:GaussSim.sim' TYP='POOL_ROOTTREE' OPT='RECREATE'";

