package           LbAlpGen
version           v2r0

# =============== structure ===================================================
branches          cmt doc src options 

# =============== exported includes ===========================================
include_dirs      $(LBALPGENROOT) 

# =============== environment =================================================
set               LBALPGENOPTS $(LBALPGENROOT)/options 

# =============== dependencies ================================================
use               LbPythia     v* Gen 
use               Boost        v* LCG_Interfaces 

# =============== constituents ================================================
library           LbAlpGen    Lib/*.cpp  Lib/*.F  
application       AlpGen      Main/*.cpp Main/*.F 

# =============== standard patterns ===========================================
apply_pattern     linker_library    library=LbAlpGen
apply_pattern     application_path 


macro_prepend GENSER_linkopts " $(alpgen_linkopts) "


# =============================================================================
private           
macro_append      AlpGenlinkopts  $(Boost_linkopts_program_options)

private 
macro_prepend fincludes $(ppcmd)"$(alpgen_path)/share/alpgen-author/alplib"


# =============================================================================
# The END 
