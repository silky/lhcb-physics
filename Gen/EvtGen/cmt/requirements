package          EvtGen
version  v1r0 

branches         cmt src doc EvtGen

use CLHEP        v17r*
use CERNLIB      v2001
use GaudiPolicy  v5r*

include_dirs     $(EVTGENROOT)

library          EvtGen -no_share *.cpp *.F

macro CERNLIB_link "`cernlib photos mathlib jetset74`" 

macro_append CERNLIB_linkopts "" \
             WIN32            " kernmd.lib photos.lib jetset74.lib"

macro_append EvtGen_cppflags "-DEVTSTANDALONE"

apply_pattern package_linkopts


