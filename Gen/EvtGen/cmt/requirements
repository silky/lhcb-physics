package     EvtGen
version     v8r2
 
branches    cmt src doc EvtGen EvtGenModels EvtGenBase photos

use         GaudiPolicy  v*
use         CLHEP        v*  LCG_Interfaces
use         GENSER       v*  Gen


include_dirs  $(EVTGENROOT) 

library       EvtGen -no_share *.cpp *.F ../photos/*.F


macro_append EvtGen_cppflags "-DEVTSTANDALONE"

apply_pattern package_linkopts

macro_append EvtGen_pp_fflags "" WIN32 "/DWIN32"

macro_prepend EvtGen_linkopts " -Wl,-u,phocin_,-u,phoqed_ " \
              WIN32           " /include:_PHOCIN /include:_PHOQED "

