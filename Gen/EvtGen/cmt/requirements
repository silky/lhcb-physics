package     EvtGen
version     v7r0
 
branches    cmt src doc EvtGen EvtGenModels EvtGenBase photos

use         CLHEP        v*  LCG_Interfaces
use         GENSER       v*  Gen
use         PYTHIA       v*  Gen
use         GaudiPolicy  v*

include_dirs  $(EVTGENROOT) 

library       EvtGen -no_share *.cpp *.F ../photos/*.F


macro_append EvtGen_cppflags "-DEVTSTANDALONE"

apply_pattern package_linkopts

macro_append EvtGen_pp_fflags "" WIN32 "/DWIN32"

macro_prepend EvtGen_linkopts " -Wl,-u,phocin_,-u,phoinf_,-u,photos_get__,-u,photos_set__,-u,hepevt_,-u,phoqed_ " \
              WIN32           " /include:_PHOCIN /include:_PHOINF /include:_PHOTOS_GET /include:_PHOTOS_SET /include:_HEPEVT /include:_PHOQED "

macro_append EvtGen_linkopts " -L$(GENSER_home)/lib -lphotos207" \
             WIN32            " /libpath:$(GENSER_home)/lib photos207.lib"
