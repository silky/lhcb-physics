package     EvtGen
version     v5r5
 
branches    cmt src doc EvtGen EvtGenModels EvtGenBase photos

use         CLHEP        v*
use         PYTHIA       v*  Gen
use         GaudiPolicy  v*

include_dirs  $(EVTGENROOT) 

library       EvtGen -no_share *.cpp *.F ../photos/*.F


macro_append EvtGen_cppflags "-DEVTSTANDALONE"

apply_pattern package_linkopts

macro_append EvtGen_pp_fflags "" WIN32 "/DWIN32"

macro_prepend EvtGen_linkopts " -Wl,-u,phoene_ " \
              WIN32           " /include:_PHOENE "

macro_append EvtGen_linkopts " -L$(CERNLIB_path)/lib -lphotos202" \
             WIN32            " /libpath:$(CERNLIB_path)/lib photos202.lib"
