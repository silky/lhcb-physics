package     EvtGen
version     v5r2

branches    cmt src doc EvtGen EvtGenModels EvtGenBase

use         CLHEP        v*
use         PYTHIA       v*  Gen
use         GaudiPolicy  v*

include_dirs  $(EVTGENROOT)

library       EvtGen -no_share *.cpp *.F 

macro CERNLIB_link "`cernlib photos mathlib`" WIN32 " "

macro_append CERNLIB_linkopts "" \
             WIN32            " photos.lib"

macro_append EvtGen_cppflags "-DEVTSTANDALONE"

apply_pattern package_linkopts

macro_append EvtGen_pp_fflags "" WIN32 "/DWIN32"
