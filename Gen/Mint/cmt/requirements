#============================================================================
# define component library link options
#============================================================================
apply_pattern component_library    library=Mint

macro            Mint_linkopts " -lMint" "libMint.so"

# -- Need more things from ROOT
private
macro_append     ROOT_linkopts " -lHist -lMinuit2 -lMinuit -lMatrix -lPhysics -lMathCore -lCore -lGpad" \
                 WIN32 " libHist.lib libMinuit2.lib libMinuit.lib libMatrix.lib libPhysics.lib libMathCore.lib libCore.lib libGpad.lib"

